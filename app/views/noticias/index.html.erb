<fieldset>
  <legend><%= t:listing, :param => (t:news, :count => 2 )%></legend>

  <table class='list'>
    <thead>
      <th><%= t:title %></th>
      <th><%= t:cover %></th>
      <th><%= t:status %></th>
      <th><%= t:author %></th>
      <th><%= t:date, :param => t("register")%></th>
      <th></th>
    </thead>
    <tbody>
    <% @noticias.each do |noticia| %>
      <tr class="<%= cycle 'odd', 'even' %>">
        <td><%=h noticia.title %></td>
        <td><%=h noticia.front %></td>
        <td><%=h noticia.status %></td>
        <td><%=h noticia.author_id %></td>
        <td><%=h noticia.created_at %></td>
        <td>
          <%= link_to t("show"), noticia %>
          <%= link_to t("edit"), edit_noticia_path(noticia) %>
          <%= link_to t("destroy"), noticia, :confirm => t("are_you_sure"), :method => :delete %>
        </td>
      </tr>
    <% end; reset_cycle %>
    </tbody>
  </table>

  <p> <%= link_to (t:create_param, :param => (t:news, :count => 1)), new_site_page_path(:type => "Noticia") %> </p>
</fieldset>
