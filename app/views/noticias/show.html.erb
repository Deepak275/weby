<div id="pages">
  <p> <h1> <%= @noticia.title %> </h1> </p>

  <a href="<%= @noticia.image.url %>" alt="<%= @noticia.text_image %>">
    <img src="<%= @noticia.image.url %>" align="right" width="200" height="200" >
    </img>
  </a>

  <p> <i> <%#= @noticia.user.login %> <%=h @noticia.date_pub %> </i> </p>
  <h2> <%= raw @noticia.summary %> </h2>
  <h3> <%= raw @noticia.text %> </h3>
  <p> <h3> <%= @noticia.url %> </h3> </p>

  <%= link_to t("edit"), {:controller => 'pages', :action => 'edit', :id => @noticia.id, :type => 'Noticia'} %> | <%= link_to t("back"), :back %>
</div>
