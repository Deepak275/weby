<%= form_for [@site, @component], :builder => SemanticFormBuilder do |f| %>
  <% f.error_messages %>

  <%= f.text_field :name, :label => t("name"), :required => true, :help => t("field_required") %>
  <%= f.text_area :body, :label => t("body"), :required => true, :help => t("field_required") %>

  <%= f.hidden_field :site_id, :value => @site.id %>

  <%= f.submit t("submit") %>
<% end %>
