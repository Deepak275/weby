<fieldset>
  <legend><%= (t"editing", :param => t("settings")) %></legend>

  <%= form_for(@setting, :builder => SemanticFormBuilder) do |f| %>
    <% if @setting.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@setting.errors.count, "") %> <%= t"prohibited_being_saved", :count => @setting.errors.count %>:</h2>
        <ul>
        <% @setting.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <p>
      <%= f.text_field :name, :label => t("name") %><br />
    </p>
    <p>	
      <%= f.text_field :value, :label => t("value") %><br />
    </p>
    <p>
      <%= f.submit t("submit")  %> <%= link_to t('back'), settings_path %>
    </p>
  <% end %>
</fieldset>

