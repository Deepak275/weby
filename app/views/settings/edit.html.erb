<fieldset>
  <legend><%= (t:editing, :param => t("settings")) %></legend>

  <%= form_for(@setting) do |f| %>
    <% @user.errors.full_messages.each do |msg| %>  
      <li><%= msg %></li>  
    <% end %>  
    <p>
      <%= f.label t("name") %><br />
      <%= f.text_field :name%><br />
    </p>
    <p>	
    	<%= f.label t("value") %><br />
      <%= f.text_field :value%><br />
    </p>
    <p>
      <%= f.submit (t:update, :param => t("setting"))  %> <%= link_to t('back'), settings_path %>
    </p>
  <% end %>
</fieldset>

