<div id="profile">
  <div class="row">
    <div class="span3">
      <div class="avatar">
        <img src="http://www.gravatar.com/avatar/<%= Digest::MD5.hexdigest(current_user.email) %>?s=120&d=mm" class="img-circle">
      </div>
      <div class="info">
        <%= current_user.first_name %><br />
        <span class="last-name"><%= current_user.last_name %></span>
      </div>
    </div>
    <div class="span9">
      <div class="heading buffer-bottom"><%= @notification.title %></div>
      <div id="notifications">
        <div class="date"><%= l(@notification.created_at, :format => :short) %></div>
        <%= raw @notification.body %>
        <div class="form-actions">
          <%= link_to icon('list', text:t(".list_all")), notifications_path %>
          <%= link_to icon('chevron-left', text:t("back")), :back %>
        </div> 
      </div>
    </div>
  </div>
</div>
