<fieldset>
  <legend><%= t"editing", :param => (t("roles")) %></legend>

  <%= form_for @role, :builder => SemanticFormBuilder do |f| %>
     <% if @role.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@role.errors.count,"") %> <%= t"prohibited_being_saved", :count => @role.errors.count %>:</h2>

        <ul>
        <% @role.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    
    <p>
      <%= f.text_field :name, :label => t("name") %>
    </p>
    <p>
      <%= f.select :theme, @themes.collect{|p| [ p , p]}, {:label => t("layout"), :include_blank => true} %>
    </p>
    <%= f.submit t("submit") %> <%= link_to t"back" %>
  <% end %>
</fieldset>
