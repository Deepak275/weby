<fieldset>
  <legend><%= t"editing", :param => (t("roles")) %></legend>

  <% form_for(@roles, :builder => SemanticFormBuilder) do |f| %>
    <% if @roles.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@roles.errors.count, "error") %> prohibited this site from being saved:</h2>
        <ul>
        <% @roles.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    
    <p>
      <%= f.text_field :name, :label => t("name") %>
    </p>
    <p>
      <%= f.select :theme, @themes.collect{|p| [ p , p]}, {:label => t("layout"), :include_blank => true} %>
    </p>
    <%= f.submit t("submit") %> <%= link_to t"back" %>
  <% end %>
</fieldset>
