<fieldset>
  <legend><%= t"new_param", :param => t("role")%></legend>

  <%= form_for @role, :builder => SemanticFormBuilder do |f|%>
     <% if @role.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@role.errors.count,"") %> <%= t"prohibited_being_saved", :count => @role.errors.count %>:</h2>
        <ul>
        <% @role.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <%= f.text_field :name, :label => t("name") %><br />
    <%= f.submit t("create") %>
  <% end %>
</fieldset>
