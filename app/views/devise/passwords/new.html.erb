<h3 class="title-box">
  <%= t(".recover_password") %>
</h3>

<p>
  <%= t(".fill_email_form") %>
</p>

<%= simple_form_for resource,
  as: resource_name,
  url: forgot_password_path,
  html: { method: :post } do |f| %>

  <%= f.input :email, required: true, autofocus: true,
    label: false, placeholder: t('.field_email') %>

  <%= f.button :submit, t('submit'), class: 'btn btn-primary',
    disable_with: t("please_wait") %>
<% end %>
