<% if obj.send(field.to_s) %>
  <% object_name = obj.class.to_s.downcase %>
  <% repository_id = obj.send(field.to_s) %>
  <% selected_image = raw archive_type_image(Repository.find(repository_id), :mini, "64x64") %>
  <% selected_image << raw(radio_button_tag("#{object_name}[#{field}]", repository_id, true, id: "#{object_name}_#{field}_#{repository_id}" )) %>
<% else %>
  <%= selected_image = nil %>
<% end %>
<div id="form">
  <%= simple_fields_for obj do |f| %>
    <%= f.input field, 
      :label => "#{t('picture')}<div id='selected-image-of-radio-group-images'>#{selected_image}</div>",
      :collection => collection,
      :collection_wrapper_tag => "div class='radio-group-images'",
      :as => :radio, 
      :label_method => lambda { |context| image_field(context, :mini, "64x64#") },
      :value_method => 'id',
      :paginate => "#{paginate collection, :remote => true}", 
      :hint => t('help_image')  %>
  <% end %>
</div>

<%= content_for :javascripts do %>
  <% javascript_tag do %>
    show_selected_image('<%= object_name %>', '<%= field.to_s %>');
  <% end %>
<% end %>
