<fieldset>
  <legend><%= t"login" %></legend>

  <%= form_for @user_session do |f| %>
    <% @user_session.errors.full_messages.each do |msg| %>  
      <p><%= msg %></p>
    <% end %>  
    <%= f.label  t"username" %><br />
    <%= f.text_field :login, { :autofocus => true } %><br />
    <%= f.label  t"password" %><br />
    <%= f.password_field :password %><br />
    <%= f.check_box :remember_me %><%= f.label t"remember_me" %><br />
    <br />
    <%= f.submit t"login" %> <%= link_to t('forgot_password'), new_password_reset_path %>
  <% end %>
</fieldset>
