<div class='well'>
  <div class='padding-box'>
    <%= raw flash_message %>
  </div>

  <%= simple_form_for @user_session, html: { class: 'form-horizontal' } do |f| %>
    <%= f.show_errors %>
  
    <%= hidden_field_tag :back_url, "#{params[:back_url].blank? ? request.fullpath : params[:back_url]}" %>
    <%= f.input :login, required: true, autofocus: true, autocapitalize: "off" %>
    <%= f.input :password, required: true %>
    <%= f.input :remember_me, as: :boolean %>
    <div class="form-actions">
      <%= f.button :submit, t('login'), class: 'btn-primary btn-large' %> 
    </div>
  <% end %>
</div>

<div class="login-links">
  <%= link_to t("new.forgot_password"), new_admin_password_reset_url(subdomain: nil) %> |
  <%= link_to( t("new.register"), new_admin_user_url(subdomain: nil) ) %>  |
  <%= link_to(t("new.help")+" |", Setting.get(:help_site), target: '_blank') if Setting.get(:help_site) %>
  <%= link_to t("new.portals"), root_url(subdomain: nil) %>
</div>
