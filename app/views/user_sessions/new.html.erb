<div class='well'>
  <div class='padding-box'>
    <%= raw flash_message_NEW %>
    <% if @user_session.errors.any? %>
      <div class="alert alert-error">
        <%= pluralize(@user_session.errors.count,"") %>
        <%= t('prohibited_being_saved', count: @user_session.errors.count) %>:
        <ul>
          <% @user_session.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>

  <%= simple_form_for @user_session, html: { class: 'form-horizontal' } do |f| %>
    <%= hidden_field_tag :back_url, "#{params[:back_url].blank? ? request.fullpath : params[:back_url]}" %>
    <%= f.input :login, required: true, autofocus: true, autocapitalize: "off" %>
    <%= f.input :password, required: true %>
    <%= f.input :remember_me, as: :boolean %>
    <div class="form-actions">
      <%= f.button :submit, t('login'), class: 'btn-primary btn-large' %> 
    </div>
  <% end %>
</div>

<div class="login-links">
  <%= link_to t('forgot_password'), new_password_reset_path %> |
  <%= link_to t('help'),
    (Setting.get(:help_site) || "/help"),
    target: '_blank' %> |
    <%= link_to t('portal.other'), root_path %> 
</div>
