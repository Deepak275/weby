<%#
The container tag
- available local variables
current_page:  the page number of currently displayed page
num_pages:     total number of pages
per_page:      number of items to fetch per page
remote:        data-remote
paginator:     the paginator that renders the pagination tags inside
-%>
<nav class="paginator">
<div class="pages_paginator">
  <%= paginator.render do -%>
    <%= current_page > 1 ? prev_link_tag : prev_span_tag %>
    <% each_page do |page| -%>
      <% if page.current? -%>
        <%= current_page_tag %>
      <% elsif page.left_outer? || page.right_outer? || page.inside_window? -%>
        <% if page.first? -%>
          <%= first_page_link_tag %>
        <% elsif page.last? -%>
          <%= last_page_link_tag %>
        <% else -%>
          <%= page_link_tag %>
        <% end -%>
      <% elsif !page.was_truncated? -%>
        <%= truncated_span_tag %>
      <% end -%>
    <% end -%>
    <%= num_pages > current_page ? next_link_tag : next_span_tag %>
  <% end -%>
</div>

<div class="info_paginator">
  <%= "#{t('page.one')} #{current_page}" %>
  <%= "#{t('of')} #{num_pages}" %>
  <%= "(#{per_page} #{t('views.pagination.per_page')})" %>
</div>

<div class="per_page_paginator">
  <%= t('views.pagination.per_page') %>
  <% per_page_array.each do |item| %>
    <span class="per_page_item">
      <%= link_to_unless per_page == item.to_i, item, {
        :controller => params[:controller],
        :action => params[:action],
        :per_page => item.to_i } %>
    </span>
  <% end %>
</div>
</nav>
