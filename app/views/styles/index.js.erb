<% case @style_type %>
<% when 'own' %>
  $('#own_styles').html("<%= escape_javascript render('own_styles', own_styles: @own_styles) %>")
<% when 'follow' %>
  $('#follow_styles').html("<%= escape_javascript render('follow_styles', follow_styles: @follow_styles) %>")
<% when 'other' %>
  $('#other_styles').html("<%= escape_javascript render('other_styles', other_styles: @other_styles) %>")
<% end %>
