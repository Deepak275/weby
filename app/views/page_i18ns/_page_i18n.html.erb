<div id="<%= i18nbuilder.object.locale.name %>">
  <%= i18nbuilder.input(:locale_id, input_html: { value: i18nbuilder.object.locale.id }, as: :hidden) %>
  <%= i18nbuilder.input :_destroy,
    label: t("delete"),
    as: :boolean %>
  <%= i18nbuilder.input :title, label: "",
    placeholder: t("title"),
    required: false,
    input_html: {class: "title_page_input"} %>

  <%= i18nbuilder.input :text, label: t("text"),
    input_html: {class: "mceAdvance text_page_input", size: "56x16" },
    as: :text %>

  <%= i18nbuilder.input :summary, label: t("summary"),
    input_html: {class: "mceSimple summary_page_input", size: "56x16" },
    as: :text %>
</div>
