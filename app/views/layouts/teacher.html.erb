<!DOCTYPE html>
<html lang="<%= session[:locale].to_s %>">
  <%= render 'layouts/shared/head', theme: 'teacher' %>
  
  <body>
    <%= current_user ? render('layouts/shared/navbar') : link_to(image_tag('weby-icon.png'), login_path(back_url: site_admin_path), style: 'position:fixed; z-index: 1000') %>
  	<div class='first_place'>
      <%= load_components 'first_place' %>
    </div>
    <div id="wrapper" <%= "style='width: #{ @main_width }px'" if @main_width %>>
      
      <header>
        <%= load_components 'top' %>
        <section id="description">
          <spam><%= raw @site.description %></spam>
        </section>
        <div class="clear"> </div>
      </header>

      <aside class="left">
        <%= load_components 'left' %>
      </aside>

      <section id="content">
        <%= raw flash_message %>
        <%= yield %>
      </section>
      
      <footer>
        <%= load_components 'bottom' %>
      </footer>
    </div>
    <%= render 'layouts/shared/javascripts' %>
  </body>
</html>

