<% load_components %>
<!doctype html>
<html lang="<%= current_locale %>">
<%= render 'layouts/shared/head', layout: 'weby' %>
<body>
  <%= render_webybar %>
  <div class='first_place'>
    <%= yield :layout_first_place %>
  </div>
  <div id="wrapper" <%= "style=\".container{max-width: #{ @main_width }px}\"".html_safe if @main_width %>>
    <header>
      <div class="container"><%= yield :layout_top %></div>
      <div class="clear"> </div>
    </header>
    <section id="content">
      <div class="container"><%= yield %></div>
    </section>
    <footer>
      <div class="container"><%= yield :layout_bottom %></div>
    </footer>
  </div>
  <%= render 'layouts/shared/javascripts', layout: 'weby' %>
</body>
</html>
