<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Webyge</title>
  <%= stylesheet_link_tag 'scaffold' %>
  <%= stylesheet_link_tag 'application' %>
  <%= stylesheet_link_tag 'semantic_forms' %>
  <%= stylesheet_link_tag 'this2html5' %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <%#= debug(params) %>
  <%#= request.env['HTTP_REFERER'] %>
  <div id="wrapper">
    <header>
      <div id="topo"></div>
      <nav>
        <%= link_to image_tag("flag_uk.png"), :locale => "en" %>
        <%= link_to image_tag("flag_br.png"), :locale => "pt-BR" %>
        <%#= render 'menus/top', :object => @top %>
      </nav>
    </header>
    <div id="main">
      <aside class="left">
        <%#= render 'menus/left', :object => @left %>  
      </aside>
      <section id="content">
        <div id="flash_messages">
          <%= raw flash_message %>
        </div>
        <%= link_to t("home"), root_path %> |
        <% if !current_user %>
          <%= link_to t("register"), new_user_path %> |
          <%= link_to t("login"), login_path %> |
        <% else %>
          <%= link_to t("admin"), :controller => 'admin', :action => 'index' %> |
          <%= link_to t("my_profile"), user_path(current_user) %> |
          <%= link_to t("logout"), logout_path, :confirm => "Are you sure you want to logout?" %>
        <% end %>
        <%= User.logged_in.count %> <%= (t"user", :count => User.logged_in.count) %> logado.

        <%= yield  %>
      </section>
      <aside class="right">
        <%#= render 'menus/right', :object => @right %>
      </aside>
      <div class="clear"></div>
    </div>
    <footer>
      <%#= render 'menus/bottom', :object => @bottom %>  
    </footer>
  </div>
</body>
</html>



