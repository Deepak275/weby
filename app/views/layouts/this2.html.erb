<!DOCTYPE html>
<html lang=<%= session[:locale].to_s %> >
	<%= content_for :stylesheets do %>
    <%= stylesheet_link_tag 'this2' %>
		<%= stylesheet_link_tag 'negativo' if session[:contrast] == 'yes' %>
  <% end %>
  <%= render 'layouts/shared/head', :contrast => 'contrast' %>
  <body>
    <%= render 'layouts/shared/institutional_bar' %>
    <div id="wrapper" <%= "style='width: #{ @main_width }px'" if @main_width %>>
      <header>
        <%= load_components 'top' %>
      </header>

      <aside class="left">
        <%= load_components 'left' %>
      </aside>

      <aside class="right">
        <%= load_components 'right' %>
      </aside>

      <section id="content">
        <%= raw flash_message %>
        <%= raw menu_admin(@site) %>
        <%= yield %>
      </section>

      <footer class="clear">
        <%= load_components 'bottom' %>
      </footer>
    </div>
    <%= render 'layouts/shared/javascripts' %>
  </body>
</html>
