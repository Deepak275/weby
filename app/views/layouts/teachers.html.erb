<!DOCTYPE html>
<html lang="<%= session[:locale].to_s %>">
	<%= content_for :stylesheets do %>
    <%= stylesheet_link_tag 'teachers' %>
  <% end %>
	<%= render 'layouts/shared/head', :contrast => 'teachers_contrast' %>
  <body>
    <%= render 'layouts/shared/institutional_bar' %>
    <div id="wrapper" <%= "style='width: #{ @main_width }px'" if @main_width %>>
      <header>
        <div align="left">
          <%#= raw menu_admin(@site) %>
        </div>
        <% unless @site.repository.nil? %>
          <figure id="top_figure">
            <% size = 155 %>
            <%= link_to image_tag(@site.repository.archive.url, :alt => @site.repository.description, :title => @site.repository.description, :size => size.to_s), @site %>
          </figure>
        <% end %>
        <section id="description">
          <spam><%= @site.description %></spam>
        </section>
        <nav class="right" id="acessibilidade">
          <%= render 'layouts/shared/menu_acessibility' %>
          <%= render 'layouts/shared/menu_locale' %>
        </nav>
        <div class="clear"></div>
      </header>

      <aside class="left">
        <nav>
          <%= raw print_menu(@menus['secondary']) %>
        </nav>
      </aside>

      <section id="content">
		    <%= raw flash_message %>
        <%= yield %>
      </section>

      <footer class="clear">
        <nav class="right">
          <%= link_to t("contact"), new_site_feedback_path(@site), :class => 'icon icon-add' %>
        </nav>
      </footer>
    </div>
  </body>
</html>

