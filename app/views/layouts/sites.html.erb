<!doctype html>
<html>
<head>
  <title>Weby</title>
  <meta charset="utf-8">
  <%= csrf_meta_tag %>
  <%= stylesheet_link_tag 'sites/sites' %>
</head>
<body>
  <%= render 'layouts/shared/navbar' %>

  <header class="cf">
    <%= image_tag 'weby.png', class: 'pull-right' %>
