<!doctype html>
<html>
<head>
  <title>Weby</title>
  <meta charset="utf-8">
  <%= csrf_meta_tag %>
  <%= stylesheet_link_tag 'sites' %>
</head>
<body>
  <%= render 'layouts/shared/navbar' %>

  <header class="cf">
    <%= image_tag 'weby.png', class: 'pull-left' %>
    <%= form_tag request.path, method: 'get', autocapitalize: "off", class: 'search pull-right' do %>
      <%= content_tag :div, class: 'input-append' do %>
        <%= search_field_tag :search, params[:search], class: 'input-search' %><%= submit_tag t("search"), class: 'btn btn-large btn-primary btn-search' %>
      <% end %>
    <% end %>
  </header>

  <section id="content">
    <div class="container">
      <%= raw flash_message %>
      <%= yield %>
    </div>
  </section>

  <footer>
    <p> <%= t('licence') %> </p>
  </footer>

  <%= javascript_include_tag 'sites/sites' %>
</body>
</html>

