<% if current_user %>
  <% content_for :javascripts, javascript_include_tag('jquery.lightbox_me') %>
  <% content_for :javascripts, javascript_include_tag('about') %>
      <div class="no_contrast">
        <div id="webybar">
          <div id='container'>
            <%= link_to main_app.root_url(subdomain: nil), class: 'left orbitron logo' do %>
              web<span class="red">y</span>
            <% end %>
            <%= link_to t(".dashboard"), main_app.site_admin_path, class: 'left' %>
            <%= link_to t(".logout"), main_app.logout_path(back_url: main_app.site_path), class: 'right' %>
            <%= link_to current_user.first_name, main_app.admin_user_url(current_user, subdomain: nil), class: 'right' %>
            <%= link_to(t(".help"), current_settings[:help_site], target: '_blank', class: 'left') if current_settings[:help_site] %>
            <%= link_to(t(".clipping"), clipping_url(subdomain: nil), class: 'left') %>
            <%= link_to t(".about"), '#', target: '_blank', class: 'left', id: 'about-weby' %>
          </div>
        </div>
      </div>
    <% else %>
      <%= link_to image_tag('weby-icon.png'), main_app.login_url(subdomain: nil, protocol: login_protocol, back_url: main_app.site_admin_url(subdomain: current_site)), id: 'webyaccess' %>
    <% end %>
