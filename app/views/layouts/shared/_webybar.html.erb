<% if current_user %>
  <div id="webybar">
    <div id='container'>
      <%= link_to root_url(subdomain: nil), class: 'left orbitron logo' do %>
        web<span class="red">y</span>
      <% end %>
      <%= link_to t(".dashboard"), site_admin_path, class: 'left' %>
      <%= link_to t(".logout"), logout_path(back_url: site_path), class: 'right' %>
      <%= link_to current_user.first_name, admin_user_url(current_user, subdomain: nil), class: 'right' %>
      <%= link_to(t(".help"), Setting.get(:help_site), target: '_blank', class: 'left') if Setting.get(:help_site) %>
      <%= link_to t(".about"), '/about.html', target: '_blank', class: 'left' %>
    </div>
  </div>
<% else %>
  <%= link_to image_tag('weby-icon.png'), login_path(back_url: site_admin_url(subdomain: current_site)), id: 'webyaccess' %>
<% end %>
