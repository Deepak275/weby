<%= javascript_include_tag :defaults %>
<%= javascript_include_tag "tiny_mce/jquery.tinymce" %>
<%= javascript_include_tag "jquery-ui.min.js" %>
<%= javascript_include_tag "jquery.multiselect.min.js" %>
<%= javascript_include_tag "jquery.multiselect.#{ session[:locale].to_s.downcase }.js" %>
<%= javascript_include_tag "jquery.ias.min.js" %>
<%= javascript_include_tag "jquery-ui-timepicker-addon" %>
<%= javascript_include_tag "jquery-ui-timepicker-pt-BR" %>

<%= yield :before_javascripts_libraries %>
<%= yield :javascripts_libraries %>
<%= yield :after_javascripts_libraries %>

<%= javascript_tag do %>
  $().ready(function() {
    $('textarea.mceAdvance').tinymce({
      script_url : '/javascripts/tiny_mce/tiny_mce.js',
      editor_selector : "mceAdvance",
      mode : "textareas",
      theme : "advanced",
      browsers : ["msie", "gecko", "safari"],
      convert_fonts_to_spans : true,
      theme_advanced_resizing : true,
      theme_advanced_toolbar_location : "top",
      theme_advanced_statusbar_location : "bottom",
      plugins : "inlinepopups,safari,curblyadvimage,paste,table,advlink,fullscreen",
      theme_advanced_buttons1 : "bold,italic,underline,strikethrough,|,justifyleft,justifycenter,justifyright,justifyfull,|,fontselect,fontsizeselect",
      theme_advanced_buttons2 : "forecolor,backcolor,|,bullist,numlist,|,outdent,indent,blockquote,|,undo,redo,|,link,unlink,anchor,image,cleanup,removeformat",
      theme_advanced_buttons3 : "tablecontrols,|,charmap,help,code,fullscreen",
      plugin_preview_pageurl : "<%= @site.name.to_s if @site %>",
      language : "<%= @current_locale %>",
      relative_urls : false
    });

    $('textarea.mceSimple').tinymce({
      script_url : '/javascripts/tiny_mce/tiny_mce.js',
      editor_selector : "mceSimple",
      mode : "textareas",
      theme : "advanced",
      browsers : ["msie", "gecko", "safari"],
      theme_advanced_resizing : true,
      theme_advanced_toolbar_location : "top",
      theme_advanced_statusbar_location : "bottom",
			plugins : "fullscreen",
      theme_advanced_buttons1 : "bold,italic,underline,|,justifyleft,justifycenter,justifyright,justifyfull,|,bullist,numlist,|,link,unlink,|,removeformat,cleanup,help,|,pasteword,code,fullscreen",
      theme_advanced_buttons2 : "",
      theme_advanced_buttons3 : "",
      language : "<%= @current_locale %>",
      relative_urls : false
    });
  });
<% end %>
<%= yield :javascripts %>
