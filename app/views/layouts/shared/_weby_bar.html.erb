<% if current_user %>
  <% content_for :javascripts, javascript_include_tag('jquery.lightbox_me') %>
  <% content_for :javascripts, javascript_include_tag('about') %>
  <div id="weby_bar">
    <%= link_to main_app.root_url(subdomain: nil), class: 'pull-left logo' do %>
      <%= image_tag 'weby-navbar.png' %>
    <% end %>
    <div class="nav pull-left">
      <%= link_to t(".dashboard"), main_app.site_admin_path, class: 'left' %>
      <%= link_to(t(".help"), current_settings[:help_site], target: '_blank', class: 'left') if current_settings[:help_site] %>
      <%= link_to t(".clipping"), clipping_url(subdomain: nil), class: 'left'  %>
      <%= link_to t(".about"), '#', target: '_blank', class: 'left', id: 'about-weby' %>
    </div>
    <div class="user pull-right">
      <img src="http://www.gravatar.com/avatar/<%= Digest::MD5.hexdigest(current_user.email) %>?s=42"
        class="pull-right">
      <div class="info pull-right">
        <%= current_user.first_name %>
        <br>
        <%= link_to main_app.site_admin_url(subdomain: nil) do %>
          <i class="icon-cog"></i>
        <% end if current_user.is_admin? %>
        <%= link_to t(".logout"), main_app.logout_path(back_url: main_app.site_path) %>
      </div>
    </div>
    <div class="clearfix"></div>
  </div>
<% else %>
  <%= link_to image_tag('weby-shortcut.png'),
    main_app.login_url(
      subdomain: nil,
      protocol: login_protocol,
      back_url: main_app.site_admin_url(subdomain: current_site)
    ), id: 'weby_shortcut' %>
<% end %>
