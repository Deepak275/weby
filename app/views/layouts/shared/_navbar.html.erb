<%= content_tag :div, class: 'navbar' do %>
<%= content_tag :div, class: 'navbar-inner' do %>
<%= content_tag :div, class: 'conteiner cf' do %>
<%= content_tag :ul, class: 'webybar-dropdown pull-left' do %>
<%= content_tag :li do %>

  <%= link_to root_path, class: 'brand' do %>
    web<%= content_tag :span, 'y', class: 'red' %>
  <% end %>

  <%= content_tag :ul, class: 'right' do %>
  <% end %>

<% end %>
<% end %>

<%= content_tag :div, class: 'nav-colapse cf' do %>
<%= content_tag :ul, class: 'nav' do %>

  <%= content_tag :li, '', class: 'divider-vertical' %>

  <%= content_tag :li do %>
    <%= link_to t("dashboard"), "#" %>
  <% end %>

  <%= content_tag :li do %>
    <%= link_to (t"help"),
      "https://softifes.andifes.org.br/projects/weby/wiki/Documenta%C3%A7%C3%A3o_para_usu%C3%A1rios",
      :target => '_blank' %>
  <% end %> 

  <%= content_tag :li do %>
    <%= link_to (t"about"), "/about", :target => '_blank' %>
  <% end %> 

<% end %> 
<%= content_tag :ul, 
  class: "#{'nav' unless current_user}
          #{'webybar-dropdown' if current_user}
          pull-right" do %> 

  <% if current_user %>

    <%= content_tag :li do %>
      <%= link_to current_user.first_name, user_path(current_user),
        class: 'brand avatar', 
        style: "background-image: url(http://www.gravatar.com/avatar/#{Digest::MD5.hexdigest(current_user.email)}?s=30);" %>
      <%= content_tag :ul, class: 'left' do %>
        <%= content_tag :li do %>
          <%= link_to t("logout"),
            logout_path(back_url: "#{request.fullpath}") %>
        <% end %>
      <% end %>
    <% end %>

  <% else %>

    <%= content_tag :li do %>
      <%= link_to t('login'), login_path(back_url:
                                          "#{request.fullpath}") %>
    <% end %>
    <%= content_tag :li do %>
      <%= link_to t('register'), new_user_path %>
    <% end %>

  <% end %>

<% end %>
<% end %>
<% end %>
<% end %>
<% end %>
