<!doctype html>
<html lang="<%= session[:locale].to_s %>">
<head>
  <title><%= @site.try(:description) || 'Weby' %></title>
  <meta charset="utf-8">
  <%= csrf_meta_tag %>
  <%= stylesheet_link_tag 'layouts/interteias/main' %>
  <%= render 'sites/shared/loadStyles' %>
  <!--[if lt IE 9]>
    <%= javascript_include_tag "http://html5shiv.googlecode.com/svn/trunk/html5.js" %>
    <%= javascript_include_tag "http://ie7-js.googlecode.com/svn/version/2.1(beta4)/IE9.js" %>
  <![endif]-->
</head>
<body>
  <%= render 'layouts/shared/webybar' %>
  <section id='first_place'>
  	<%= load_components 'first_place' %>
  	<div class="clearfix"> </div>
  </section>
  <div class="container">
	  <header>
	  	<%= load_components 'top' %>
	  	<div class="clearfix"> </div>
	  </header>
	  <section id="content">
	  	<%= yield %>
	  </section>
	  <footer>
	  	<%= load_components 'bottom' %>
	  </footer>
	</div>
</body>
</html>