<!DOCTYPE html>
<html>
<head>
  <title> <%= @site.name %> </title>
  <meta charset="utf-8">
  <%= csrf_meta_tag %>
  <%= stylesheet_link_tag 'http://bibliotecaweb.mec.gov.br/barra_do_governo/css/barra_do_governo.css' %>
  <%= stylesheet_link_tag 'barra_ufg' %>
  <%= stylesheet_link_tag 'scaffold' %>
  <%= stylesheet_link_tag 'application' %>
  <%= stylesheet_link_tag 'semantic_forms' %>
  <%= stylesheet_link_tag 'this2html5' %>
  <%= stylesheet_link_tag 'will_paginate' %>
  <%= stylesheet_link_tag 'SyntaxHighlighter/shCore' %>
  <%= stylesheet_link_tag 'SyntaxHighlighter/shThemeDefault' %>
  <%= render :partial => 'sites/viewCsses' %>
</head>
<%#= debug params %>
<% if @site.body_width %>
  <body style='width:<%= "#{@site.body_width.to_i + 4}" %>px'>
<% elsif @top_banner_width %>
  <body style='width:<%= "#{@top_banner_width.to_i + 4}" %>px'>
<% else %>
  <body>
<% end %>

  <%= raw institute_bar :bars => ["mec","ufg"] %>

  <div class="barra_governo">
    <div class="barra_governo_box">
      <div class="box2">
        <div class="box3">
          <div class="box4">
            <div class="marca_mec">
              <a id="top_barra" name="top_barra" target="_blank" href="http://portal.mec.gov.br" class="txtIndent" title="Minist&eacute;rio da Educa&ccedil;&atilde;o">MEC - Minist&eacute;rio da Educa&ccedil;&atilde;o</a>
            </div>
            <div class="marca_brasil">
              <a href="http://www.brasil.gov.br/" target="_blank" title="Portal Brasil">Portal Brasil</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="barra_ufg">
    <div class="barra_ufg_box">
      <a href="http://www.ufg.br"><img src="/images/ufg.png" border="0" alt="UFG" />Universidade Federal de Goiás</a>
      <select onchange="if(options[selectedIndex].value) window.location.href= (options[selectedIndex].value)">
        <option value="" selected="selected">Portal UFG</option>
        <option value="http://sistemas.ufg.br/PORTAL/arquivos/login.php">Portal UFGNet</option>
        <option value="http://www.ufg.br/page.php?menu_id=180&amp;pos=esq">Pró-reitorias</option>
        <option value="http://www.ufg.br/page.php?menu_id=277&amp;pos=esq">Unidades Acadêmicas</option>
        <option value="http://www.prodirh.ufg.br/">Concursos</option>
        <option value="http://www.vestibular.ufg.br/ps2009-2/home.htm">Vestibular</option>
        <option value="http://www.ufg.br/page.php?tipo=fale_conosco_form">Fale Conosco</option>
        <option value="http://www.ufg.br/page.php?menu_id=282&amp;pos=esq">Dúvidas frequentes</option>
      </select>
      <div style="clear: both;"></div>
     </div>
  </div>

  <div id="wraper">
  <%#= debug(session) %>
  <header>
    <%= render :partial => "sites/viewCover" %>
    <nav>
      <%= raw print_menu(@main) %>
			<br/>
      <nav class="right">
				<%= image_tag("font_size_down.png", :onclick => "font_size_down()") %>
				<%= image_tag("font_size_original.png", :onclick => "font_size_original()") %>
				<%= image_tag("font_size_up.png", :onclick => "font_size_up()")%>
        <%= link_to image_tag("flag_uk.png", :size => "24x12"), :locale => "en" %>
        <%= link_to image_tag("flag_br.png", :size => "24x12"), :locale => "pt-BR" %>
      </nav>
      <div class="clear"> </div>
    </nav>
  </header>

  <aside class="left">
    <nav>
      <%= raw print_menu(@secondary) %>
    </nav>
  </aside>

  <aside class="right">
    <nav>
      <%= raw print_menu(@auxiliary) %>
    </nav>
    <%= render :partial => "sites/viewBanner"  %>
  </aside>

  <section id="content">
    <%= raw flash_message %>

    <%= raw adminnav(@site) %>

    <%= yield %>
  </section>

  <footer class="clear">
    <nav>
      <%= raw print_menu(@base) %>
      <div class="clear"></div>
    </nav>
    <nav class="right">
      <%= link_to t("feedback.one"), new_site_feedback_path(@site), :class => 'icon icon-add' %>
    </nav>
    <section id="info">
      <%= raw @site.footer %>
    </section>
  </footer>
  </div>

  <%= javascript_include_tag "SyntaxHighlighter/shCore" %>
  <%= javascript_include_tag "SyntaxHighlighter/shBrushCss" %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag "jquery-ui.min.js" %>
  <!--[if lt IE 9]>
    <%#= javascript_include_tag "http://html5shiv.googlecode.com/svn/trunk/html5.js" %>
    <%#= javascript_include_tag "http://ie7-js.googlecode.com/svn/version/2.1(beta4)/IE9.js" %>
  <![endif]-->
  <%= javascript_include_tag "tiny_mce/jquery.tinymce" %>
  <%= javascript_tag do %>
    $().ready(function() {  
      $('textarea.mceAdvance').tinymce({  
        script_url : '/javascripts/tiny_mce/tiny_mce.js',  
        editor_selector : "mceAdvance",
        mode : "textareas",
        theme : "advanced",
        browsers : ["msie", "gecko", "safari"],
        convert_fonts_to_spans : true,
        theme_advanced_resizing : true, 
        theme_advanced_toolbar_location : "top",  
        theme_advanced_statusbar_location : "bottom", 
        plugins : "inlinepopups,safari,curblyadvimage,paste,table",
        theme_advanced_buttons1 : "bold,italic,underline,strikethrough,|,justifyleft,justifycenter,justifyright,justifyfull,|,fontselect,fontsizeselect",
        theme_advanced_buttons2 : "forecolor,backcolor,|,bullist,numlist,|,outdent,indent,blockquote,|,undo,redo,|,link,unlink,anchor,image,cleanup",
        theme_advanced_buttons3 : "tablecontrols,|,removeformat,charmap,help,code",
        plugin_preview_pageurl : "<%= @site.name.to_s if @site %>"
      });
    }); 
    $().ready(function() {  
      $('textarea.mceSimple').tinymce({  
        script_url : '/javascripts/tiny_mce/tiny_mce.js',  
        editor_selector : "mceSimple",
        mode : "textareas",
        theme : "advanced",
        browsers : ["msie", "gecko", "safari"],
        theme_advanced_resizing : true, 
        theme_advanced_toolbar_location : "top",  
        theme_advanced_statusbar_location : "bottom", 
        theme_advanced_buttons1 : "bold,italic,underline,|,justifyleft,justifycenter,justifyright,justifyfull,|,bullist,numlist,|,link,unlink,|,removeformat,cleanup,help,|,pasteword,code",
        theme_advanced_buttons2 : "",
        theme_advanced_buttons3 : ""
      });
    }); 
  <% end %>
  <%= javascript_tag do %>
    SyntaxHighlighter.all()
  <% end %>
</body>
</html>

