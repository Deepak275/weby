<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Webyge</title>
  <%= stylesheet_link_tag 'scaffold' %>
  <%= stylesheet_link_tag 'application' %>
  <%= stylesheet_link_tag 'semantic_forms' %>
  <%= stylesheet_link_tag 'this2html5' %>
  <%= javascript_include_tag :defaults %>
  <!--[if lt IE 9]>
    <%= javascript_include_tag ="http://html5shiv.googlecode.com/svn/trunk/html5.js" %>
    <%= javascript_include_tag ="http://ie7-js.googlecode.com/svn/version/2.1(beta4)/IE9.js" %>
  <![endif]-->
  <script type="text/javascript"> 
    function IEHoverPseudo() {
      var navItems = document.getElementById("root").getElementsByTagName("li");
      for (var i=0; i<navItems.length; i++) {
        if(navItems[i].className == "menuparent") {
          navItems[i].onmouseover=function() { this.className += " over"; }
          navItems[i].onmouseout=function() { this.className = "parent"; }
        }
      }
    }
    window.onload = IEHoverPseudo;
  </script> 
  <%= csrf_meta_tag %>
</head>
<body>
  <%= debug(params) %>
  <%#= request.env['HTTP_REFERER'] %>
  <div id="wrapper">
    
    <header>
      <div id="topo"></div>
      <nav class="inline">
        <% unless @top.nil? %>
          <%= raw list_menus(@top) %>
        <% end %>
        <%= link_to image_tag("flag_uk.png"), :locale => "en" %>
        <%= link_to image_tag("flag_br.png"), :locale => "pt-BR" %>
        <div class="clear"></div>
      </nav>
    </header>
    
    <div id="main">
      <aside class="left">
        <% unless @left.nil? %>
          <nav>
            <%= raw list_menus(@left) %>
          </nav>
        <% end %>
      </aside>
      
      <section id="content">
        <div id="flash_messages">
          <%= raw flash_message %>
        </div>
      <%= link_to t("home"), root_path %> |
      <% if check_permission(AdminController, "index") %>
        <%= link_to t("admin"), :controller => 'admin', :action => 'index' %> |
      <% end %>
      <% if !current_user %>
        <%= link_to t("register"), new_user_path %> |
        <%= link_to t("login"), login_path %> |
      <% else %>
        <%= link_to t("my_profile"), user_path(current_user) %> |
        <%= link_to t("logout"), logout_path, :confirm => "Are you sure you want to logout?" %>
      <% end %>
      <%= User.logged_in.count %> <%= (t"user", :count => User.logged_in.count) %> logado.

      <%= yield  %>
      </section>
      
      <aside class="right">
        <% unless @right.nil? %>
          <nav>
            <%= raw list_menus(@right) %>
          </nav>
        <% end %>
      </aside>
      <div class="clear"></div>

    </div>
    
    <footer>
      <nav class="inline">
        <% unless @bottom.nil? %>
          <%= raw list_menus(@bottom) %>
          <div class="clear"></div>
        <% end %>
        <div id="feedback">
          <% unless @site.nil? %>
            <%= link_to 'Novo feedback', new_site_feedback_path(@site.id) if @site.id %>
          <% end %>
        </div>
      </nav>
    </footer>

  </div>
</body>
</html>



