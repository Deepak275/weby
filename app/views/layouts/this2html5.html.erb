<!DOCTYPE html>
<html>
<head>
  <title> <%= @site.name %> </title>
  <meta charset="utf-8">
  <%= csrf_meta_tag %>
  <%= stylesheet_link_tag 'scaffold' %>
  <%= stylesheet_link_tag 'application' %>
  <%= stylesheet_link_tag 'semantic_forms' %>
  <%= stylesheet_link_tag 'this2html5' %>
  <%= stylesheet_link_tag 'will_paginate' %>
</head>

<% if @site.body_width %>
  <body style='width:<%= "#{@site.body_width}" %>px'>
<% elsif @top_banner_width %>
  <body style='width:<%= "#{@top_banner_width}" %>px'>
<% else %>
  <body>
<% end %>

  <%#= debug(session) %>
  <header>
    <%= render :partial => "sites/viewCover" %>
    <nav>
      <%= raw print_menu(@top) %>
      <nav class="right">
        <%= link_to image_tag("flag_uk.png", :size => "24x12"), :locale => "en" %>
        <%= link_to image_tag("flag_br.png", :size => "24x12"), :locale => "pt-BR" %>
      </nav>
      <div class="clear"> </div>
    </nav>
  </header>

  <aside class="left">
    <nav>
      <%= raw print_menu(@left) %>
    </nav>
  </aside>

  <aside class="right">
    <nav>
      <%= raw print_menu(@right) %>
    </nav>
    <%= render :partial => "sites/viewNewsletter"  %>
  </aside>

  <section id="content">
    <%= raw flash_message %>

    <div id="menu_admin">
      <%= link_to t("portal"), root_path %> |
      <%= link_to t("home"), @site %> |
      <%= link_to t("admin"), site_admin_index_path(@site) %> |
      <% if !current_user %>
        <%= link_to t("register"), new_user_path %> |
        <%= link_to t("login"), login_path %> |
      <% else %>
        <%= link_to t("my_profile"), user_path(current_user) %> |
        <%= link_to t("logout"), logout_path, :confirm => "Are you sure that you want to logout?" %>
      <% end %>
      <%= User.logged_in.count %> <%= (t"user", :count => User.logged_in.count) %> <%= t("logged") %>.
    </div>

    <%= yield %>
  </section>

  <footer class="clear">
    <nav>
      <%= raw print_menu(@bottom) %>
      <div class="clear"></div>
    </nav>
    <nav class="right">
      <%= link_to t("feedback"), new_site_feedback_path(@site), :class => 'icon icon-add' %>
    </nav>
    <section id="info">
      <%= raw @site.footer %>
    </section>
  </footer>

  <%= javascript_include_tag :defaults %>
  <%= javascript_tag do %>
    //ajax search
    $('.pagination a').live('click',function (){
      $.getScript(this.href);
      return false;
    });
  <% end %>
  <!--[if lt IE 9]>
    <%= javascript_include_tag "http://html5shiv.googlecode.com/svn/trunk/html5.js" %>
    <%= javascript_include_tag "http://ie7-js.googlecode.com/svn/version/2.1(beta4)/IE9.js" %>
  <![endif]-->
  <%= javascript_include_tag "tiny_mce/jquery.tinymce" %>
  <%= javascript_tag do %>
    $().ready(function() {  
      $('textarea.mceAdvance').tinymce({  
        script_url : '/javascripts/tiny_mce/tiny_mce.js',  
        editor_selector : "mceAdvance",
        mode : "textareas",
        theme : "advanced",
        browsers : ["msie", "gecko", "safari"],
        convert_fonts_to_spans : true,
        theme_advanced_resizing : true, 
        theme_advanced_toolbar_location : "top",  
        theme_advanced_statusbar_location : "bottom", 
        plugins : "inlinepopups,safari,curblyadvimage,paste,table",
        theme_advanced_buttons1 : "bold,italic,underline,strikethrough,|,justifyleft,justifycenter,justifyright,justifyfull,|,fontselect,fontsizeselect",
        theme_advanced_buttons2 : "forecolor,backcolor,|,bullist,numlist,|,outdent,indent,blockquote,|,undo,redo,|,link,unlink,anchor,image,cleanup",
        theme_advanced_buttons3 : "tablecontrols,|,removeformat,charmap,help,code",
        plugin_preview_pageurl : "<%= @site.name.to_s if @site %>"
      });
    }); 
    $().ready(function() {  
      $('textarea.mceSimple').tinymce({  
        script_url : '/javascripts/tiny_mce/tiny_mce.js',  
        editor_selector : "mceSimple",
        mode : "textareas",
        theme : "advanced",
        browsers : ["msie", "gecko", "safari"],
        theme_advanced_resizing : true, 
        theme_advanced_toolbar_location : "top",  
        theme_advanced_statusbar_location : "bottom", 
        theme_advanced_buttons1 : "bold,italic,underline,|,justifyleft,justifycenter,justifyright,justifyfull,|,bullist,numlist,|,link,unlink,|,cleanup,help,|,pasteword,code",
        theme_advanced_buttons2 : "",
        theme_advanced_buttons3 : ""
      });
    }); 
  <% end %>
</body>
</html>

