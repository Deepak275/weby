<fieldset>
	<legend><%= t("subject") %>: <%= @feedback.subject %></legend>
	
  <p>
    <b><%= t("name") %>:</b>
    <%= @feedback.name %>
  </p>
  <p>
    <b><%= t("email") %>:</b>
    <%= @feedback.email %>
  </p>
  <p>
    <b><%= t("message") %>:</b>
    <%= @feedback.message %>
  </p>
  <p>
    <b><%= t('send_date') %></b>
    <%= l @feedback.created_at, format: :short %>
  </p>

  <%= link_to t('edit'), edit_site_feedback_path(@site, @feedback) %> | <%= link_to t("list_all.masc"), site_feedbacks_path(@site) %> | <%= link_to t('back'), :back %>  
</fieldset>
