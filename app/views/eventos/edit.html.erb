      <%= f.label  t"summary" %><br />
      <%= f.text_field :summary %>
    </p>
    <p>
      <%= f.label :pdf %><br />
      <%= f.text_field :pdf %>
    </p>
    <p>
      <%= f.label t"cover" %><br />
      <%= f.text_field :front %>
    </p>
    <p>
      <%= f.label  t"time_cover" %><br />
      <%= f.datetime_select :front_time, :order => [:year, :month, :day], :use_month_numbers => true %>
    </p>
    <p>
      <%= f.label  t"kind" %><br />
      <%= f.text_field :kind %>
    </p>
