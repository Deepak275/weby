<fieldset>
  <legend><%= t"editing", :param => (t"event", :count => 1) %></legend>

  <% form_for(@evento) do |f| %>
    <% if @evento.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@evento.errors.count, "error") %> prohibited this site from being saved:</h2>
        <ul>
        <% @evento.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <p>
      <%= f.label  t"date", :param => t("register") %><br />
      <%= f.date_select :created_at, :order => [:year, :month, :day], :use_month_numbers => true  %>
    </p>
    <p>
      <%= f.label  t"date", :param => t("publication") %><br />
      <%= f.date_select :date_pub, :order => [:year, :month, :day], :use_month_numbers => true  %>
    </p>
    <p>
      <%= f.label  t"date", :param => t("begin") %><br />
      <%= f.date_select :date_begin, :order => [:year, :month, :day], :use_month_numbers => true  %>
    </p>
    <p>
      <%= f.label t"date", :param => t("end") %><br />
      <%= f.date_select :date_end, :order => [:year, :month, :day], :use_month_numbers => true  %>
    </p>
    <p>
      <%= f.label  t"picture" %><br />
      <%= f.text_field :image %>
    </p>
    <p>
      <%= f.label  t"position" %><br />
      <%= f.text_field :position %>
    </p>
    <p>
      <%= f.label  t"status" %><br />
      <%= f.text_field :status %>
    </p>
    <p>
      <%= f.label t"author" %><br />
      <%= f.text_field :author_id %>
    </p>
    <p>
