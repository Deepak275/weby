<% unless @my_csses.nil? and @othe_csses.nil? OR @my_csses.empty? and @othe_csses.empty? %>

  <% unless @my_csses.empty? %>
    <h3><%= t'my_css' %></h3>
    <table class='list'>
      <thead>
        <th><%= t'name' %></th>
        <th><%= t'publish' %></th>
        <th></th>
      </thead>
      <tbody>
        <% @my_csses.each do |css| %>
          <tr class="<%= cycle 'odd', 'even' %>">
            <td> <%= css.css.name %> </td>
            <td align="center"> <%= raw toggle_field(css, "publish") %> </td>
            <td> <%= raw make_menu(css) %> </td>
          </tr>
        <% end; reset_cycle %>
      </tbody>
    </table>
  <% end %>

  <% unless @other_csses.empty? and @used_csses.empty? %>
    <h3><%= t'other_css' %></h3>
    <table class='list'>
      <thead>
        <th><%= t'name' %></th>
        <th><%= t'owner' %></th>
        <th><%= t'follow' %></th>
        <th></th>
      </thead>
      <tbody>
        <% unless @used_csses.empty? %>
          <% @used_csses.each do |css| %>
            <tr class="<%= cycle 'odd', 'even' %>">
              <td> <%= css.css.name %> </td>
              <td> <%= css.site.name %> </td>
              <td align="center"> <%= raw follow(css, true) %> </td>
              <td> <%= raw make_menu(css) %> </td>
            </tr>
          <% end; reset_cycle %>
        <% end %>
        <% unless @other_csses.empty? %>
          <% @other_csses.each do |css| %>
            <tr class="<%= cycle 'odd', 'even' %>">
              <td> <%= css.css.name %> </td>
              <td> <%= css.site.name %> </td>
              <td align="center"> <%= raw follow(css, false) %> </td>
              <td> <%= raw make_menu(css) %> </td>
            </tr>
          <% end; reset_cycle %>
        <% end %>
      </tbody>
    </table>
  <% end %>

<% else %>
  <% flash.now[:warning] = (t"none_param", :param => t("css.one")) %>
<% end %>
