<%= simple_form_for [@site,@css] do |f| %>

  <% if @css.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@css.errors.count,"") %> <%= t"prohibited_being_saved", :count => @css.errors.count%>:</h2>
      <ul>
        <% @css.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.input :name, :label => t("name"), :hint => t("field_required") %>
  <%= f.input :css, :label => t("css.one"), :as => :text %>

  <%= f.fields_for :sites_csses do |sc| %>
    <%= sc.input :site_id, :input_html => {:value => @site.id}, :as => :hidden %>
    <%= sc.input :owner, :input_html => {:value => true}, :as => :hidden %>
    <%= sc.input :publish, :input_html => {:value => true}, :as => :hidden %>
  <% end %>

  <div class="actions">
    <%= f.submit t("submit") %>
    <%= link_to t('back'), site_csses_path(@site) %>
  </div>

<% end %>
