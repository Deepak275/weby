<fieldset>
  <div id="pages">
    <p> <h1> <%= @page.title %> </h1> </p>

    <% unless @page.image_file_name.nil? %>
      <a href="<%= @page.image.url %>" alt="<%= @page.text_image %>">
        <img src="<%= @page.image.url %>" align="right" width="200" height="200" > </img>
      </a>
    <% end %>

    <p> <i> <%= @page.user.login %>, <%= l @page.created_at, :format => :short  %> </i> </p>
    <h2> <%= raw @page.summary %> </h2>
    <h3> <%= raw @page.text %> </h3>
    <p> <h3> <%= @page.url %> </h3> </p>

    <%= link_to t("edit"), {:controller => 'pages', :action => 'edit', :id => @page.id, :type => 'News'} %> | 
    <%= link_to t("back"), :back %>
  </div>
</fieldset>
