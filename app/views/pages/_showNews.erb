<fieldset>
  <div id="pages">
    <p> <h1> <%= @page.title %> </h1> </p>

    <% unless @page.repository.archive_file_name.nil? %>
      <a href="<%= @page.repository.archive.url %>" alt="<%= @page.repository.description %>">
        <%= image_tag("#{@page.repository.archive.url}", :size => "200x200", :align => "right") %>
      </a>
    <% end %>

    <p> <i> <%= @page.user.login %>, <%= l @page.created_at, :format => :short  %> </i> </p>
    <h2> <%= raw @page.summary %> </h2>
    <h3> <%= raw @page.text %> </h3>
    <p> <h3> <%= @page.url %> </h3> </p>

    <%= link_to t("edit"), {:controller => 'pages', :action => 'edit', :id => @page.id, :type => 'News'} %> | 
    <%= link_to t("back"), :back %>
  </div>
</fieldset>
