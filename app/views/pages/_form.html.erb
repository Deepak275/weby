<%= simple_form_for([@site,@page]) do |f| %>
  <% if @page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@page.errors.count,"") %><%= t"prohibited_being_saved", count: @page.errors.count %>:</h2>
      <ul>
        <% @page.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="tabs">
    <ul>
      <% @page.translations.each do |translation| %>
        <li><%= link_to locale_with_name(translation.locale), "##{translation.locale}" %></li>
      <% end %>
    </ul>
    <%= f.fields_for :translations do |translate_form| %>
      <% if @page.id %>
        <%= translate_form.input :_destroy,
          label: t("destroy"),
          as: :boolean %>
      <% end %>
      <div id="<%= translate_form.object.locale %>">
        <%= translate_form.input :locale,
          input_html: { value: translate_form.object.locale },
          as: :hidden%>
        <%= translate_form.input :title %>

        <%= translate_form.input :summary,
          input_html: {class: "mceSimple", style: "width: 550px; height: 180px;"},
          as: :text %>

        <%= translate_form.input :text,
          input_html: {class: "mceAdvance", style: "width: 550px; height: 320px;"},
          as: :text %>
      </div>
    <% end %>
  </div>

  <%= f.input :date_begin_at %>

  <%= f.input :type %>

  <div class="actions">
    <%= f.button :submit, t('save'), class: 'green-button' %>
    <%= link_to t('back'), site_pages_path(@site), class: 'red-button' %>
  </div>
<% end %>

<%= content_for :javascripts, javascript_include_tag("pages.form") %>
