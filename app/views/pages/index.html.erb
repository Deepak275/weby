<fieldset>
  <legend><%= t("page.other") %></legend>

  <div class="contextual">
    <% with_permission do %>
      <%= link_to (t"new_param.fem", param: (t"page.one")), new_site_page_path, class: 'icon icon-add' %>&nbsp;|
    <% end %>
    <%= link_to (t"covers"), list_front_site_pages_path(@site), class: 'icon icon-newspaper' %>
  </div>

  <center>
    <%= form_tag site_pages_path(@site), method: 'get', remote: true do %>
      <%= text_field_tag :search %>
      <%= hidden_field_tag 'page', 1 %>
      <%= hidden_field_tag 'per_page', "#{params[:per_page]}" %>
      <%= submit_tag t("search"), class: 'search-button' %>
    <% end %>
  </center>

  <%= info_page @pages %>
  <%= paginate @pages, remote: true %>
<%= I18n.locale %>
  <div id="pages">
    <table class="list">
      <thead>
        <tr>
          <th><%= sortable 'id', 'id' %></th>
          <th><%= sortable 'created_at', t("date_param", param: t("register"))%></th>
          <th><%= sortable 'page_translations.title', t("title") %></th>
          <th>Idiomas Cadastrados</th>
          <th><%= sortable 'users.firstname', t("author") %></th>
          <th><%= t("category") %></th>
          <th><%= sortable 'type', t("type") %></th>
          <% with_permission(action: 'toggle_field') do %>
            <th><%= sortable 'front', t("cover") %></th>
            <th><%= t"publish" %></th>
            <th></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <%= render partial: 'page', collection: @pages %>
      </tbody>
    </table>
    <%= per_page_links @pages, remote: true %>
    <%= paginate @pages, remote: true %>
  </div>
</fieldset>
