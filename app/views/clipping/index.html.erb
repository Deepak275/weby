<div class="row">
  <div class="span12">
    <h3 class="pull-left clipping-title"><%= t(".title") %></h3>
    <%= form_tag request.path, method: 'get', autocapitalize: "off", class: 'form-inline pull-right search' do %>
      <%= content_tag :div, class: 'input-append' do %>
        <%= search_field_tag :search, params[:search], class: 'input-search' %><%= submit_tag t(".search"), class: 'btn btn-primary' %>
      <% end %>
    <% end %>
  </div>
</div>

<div class="row" id="clipping">
  <div class="span12">
    <ul class="thumbnails">
      <% @pages.each do |page| %>
        <li class="span4">
          <div class="thumbnail">
            <%= weby_file_view(page.image, :thumb, 64, nil, {as: "link", url: site_page_url(page, subdomain: page.owner)}) %>
            <div class="caption">
              <h4>
                <%= link_to page.title.truncate(70), site_page_url(page, subdomain: page.owner) %>
              </h4>
              <p>
              <%= raw sanitize(page.summary, :tags=>[]).truncate(150) %>
              </p>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
