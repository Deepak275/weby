<fieldset>  
  <p>
    <b><%= t"name" %>:</b>
    <%= @group.name %>
  </p>

  <p>
    <b><%= t"user", :count => 2 %>:</b>
    <ul>
      <% @group.users.each do |user| %>
        <li><%= user.login %></li>
      <% end %>
    </ul>
  </p>

  <%= link_to t('edit'), edit_site_group_path(@site, @group) %> |
  <%= link_to t('back'), site_groups_path(@site) %>
</fieldset>
