<fieldset>
  <legend><%= t"editing", :param => t("my_account")%></legend>

  <%= form_for @user, :builder => SemanticFormBuilder, :url => account_path do |f| %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "") %> <%= t"prohibited_being_saved", :count => @user.errors.count %>:</h2>
        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <%= render :partial => "form", :object => f %><br />
    <%= f.submit t:"submit" %> <%= link_to t("my_profile"), user_path %>
  <% end %>
</fieldset>
