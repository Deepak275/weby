<%= form.text_field :login, :label => t('username') %><br />
<%= form.text_field :email, :label => t('email') %><br />
<%= form.password_field :password, :label => form.object.new_record? ?  t('password') : 'Change password'  %><br />
<%= form.password_field :password_confirmation, :label => t('password_confirmation') %><br />
<%= form.check_box :status, :label => t('status') %><br />

<%= form.select :theme, @themes.collect{|p| [ p , p]}, :label => t('layout') %><br />
