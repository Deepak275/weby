<fieldset>
  <legend><%=  t"user.other" %></legend>

  <% if current_user.is_admin? %>
    <div class="contextual">
      <% if @site %>
        <p> <%= link_to (t"enrole_user_site"), manage_roles_site_users_path, :class => 'icon icon-add' %> </p>
      <% else %>
        <p> <%= link_to (t"new_param.masc", :param => (t"user.one")), new_user_path, :class => 'icon icon-add' %> </p>
      <% end %>
    </div>
  <% end %>

  <center>
    <%= form_tag request.path, :method => 'get', :remote => true do %>
      <%= label_tag t("search") %>
      <%= text_field_tag :search %>
      <%= submit_tag t("submit") %>
    <% end %>
  </center>

  <div id="list">
    <%= render :partial => "list" %>
  </div>
</fieldset>
