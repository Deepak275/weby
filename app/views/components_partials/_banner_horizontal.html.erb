<section id="banner_horizontal">
  <div>
    <% @banners = @site.banners.category(settings[:category])[0..3] %>
    <% @banners.each do |b| %>
			<% unless b %>
      <figure>
        <%= image_tag(b.repository.archive.url(b.size), :width => b.width, :height => b.height, :alt => b.text) %>
      </figure>
			<% end %>
    <% end %>
  </div>
  <div class="clear"></div>
</section>
