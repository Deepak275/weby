<section id="banner_horizontal">
  <div>
  	<% @banners = @site.banners.published.tagged_with(settings[:category]) %>
    <% @banners.each do |banner| %>
      <% banner_url = banner.page_id ? site_page_path(@site, banner.page_id) : banner.url %>
			<% unless banner.repository.nil? %>
   	    <figure>
      		<% format = banner.size ? banner.size : "little" %>
          <%= weby_file_view(banner.repository,
                             format,
                             "#{banner.width}",
                             "#{banner.height}",
                             {
                                as: 'link',
                                alt: banner.text,
                                title: banner.text,
                                url: banner_url,
                                target: (banner.new_tab ? '_blank' : '')
                             }) %>
		    </figure>
			<% end %>
    <% end %>
  </div>
  <div class="clear"></div>
</section>
