<% @page = Page.where(['id = ?', settings[:page]]) %>

<% unless @page.empty? %>
  <% params[:type] = @page.type %>
  <%= render :template => 'pages/show' %>
<% else %>
  <%# TODO arrumar mensagem de componente mal configurado %>
  <h1>Página não encontrada, por favor verifique a configuração do componente</h1>
<% end %>
