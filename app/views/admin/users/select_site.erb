<%- title  "select_site"  %>

<div class="span9">
  <div class="well">

    <%= info_page @sites %>
    <%= paginate @sites %>
    <table class='list'>
      <thead>
        <th><%= t"name" %></th>
        <th><%= t"action" %></th>
      </thead>
      <tbody>
        <% @sites.each do |site| %>
          <tr class="<%= cycle 'odd', 'even' %>">
            <td> <%= link_to site.name, manage_roles_site_admin_users_path(site) %> </td>
            <td> <%= link_to t('select_param', :param => ''), manage_roles_site_admin_users_path(site, :user => params[:user]) %> </td>
          </tr>
          <% end; reset_cycle %>
        </tbody>
      </table>
      <%= per_page_links @sites %>
      <%= paginate @sites %>
    </div>
  </div>
