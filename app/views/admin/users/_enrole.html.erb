<% if @users_unroled.empty? %>
  <h2>Nenhum usu√°rio para cadastrar</h2>
<% else %>
  <%= form_tag change_roles_admin_users_path,
    :method => "post",
    :id => "subscribe_users",
    :remote => 'true',
    :update => 'enrole' %>
  <table class="list">
    <thead>
      <tr>
        <th><%= t "enrole_user" %></th>
        <th style="width: 40%"><%= t('role.one') %></th>
      </tr>
    </thead>
    <tbody>
      <tr class="<%= cycle 'odd', 'even' %>">
        <td style="height: 500px; overflow: auto">
          <div>
            <%= text_field_tag :users_unroled, params[:users_unroled], placeholder: t("search") %>
          </div>
          <div style="height: 500px; overflow: auto">
            <ul id="users_list_roles"> 
              <% @users_unroled.each do |user| %>
                <li>
                  <%= check_box_tag 'user[id][]', user.id, user.id == params[:user_id].to_i %> <%= " #{user.first_name} #{user.last_name}" %> (<%= link_to user.login, admin_user_path(user) %>)
                </li>
              <% end %>
            </ul>
          </div>
        </td>
        <td>
          <ul> 
            <% @roles.each do |role| %>
              <li> <%= check_box_tag 'role_ids[]', role.id %> <%= role.name %> </li>
            <% end %>
          </ul>
        </td>
      </tr>
    </tbody>
  </table>
  <div class="actions">
    <%= submit_tag (t"save"), class: "green-button" %>
    <%= link_to t("back"), :back, class: "red-button" %>
  </div>
</form>
<% end %>

<%= content_for :javascripts do %>
  <%= javascript_tag do %>
    $(document).ready(function(){
      var filter_user = function(input) {
        var pattern = new RegExp(".*" + input + ".*", "gi");
        $('#users_list_roles li').each(function(index, element){
          if( $(element).text().match(pattern) ){
            $(element).show();
          } else {
            $(element).hide();
          }
        });
      }

      $('#users_unroled').live('keyup',function(){
        filter_user($(this).val());
      });

      <% unless @user.blank? or not @users_unroled.include?(@user) %>
        var name = '<%= @user.first_name %>';
        $('#users_unroled').val(name);
        filter_user(name);
      <% end %>
    });
  <% end %>
<% end %>
