<fieldset>
  <legend><%= t"permission.other" %></legend>

  <% if check_permission(Admin::RightsController, [:new]) %>
    <div class="contextual">
      <p> <%= link_to (t"new_param.masc", :param => t('right.one')), new_admin_right_path, :class => 'icon icon-add' %> </p>
    </div>
  <% end %>

  <table class="list">
    <thead>
      <tr>
        <th><%= t"name" %></th>
        <th><%= t"controller" %></th>
        <th><%= t"action" %></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @rights.group_by(&:controller).sort.each do |p, i| %>
        <tr class="<%= cycle 'odd', 'even' %>">
          <td colspan="<%= @rights.length + 1%>">
           <b><%= t("#{p.singularize}.other") %></b>
          </td>
        </tr>
        <% i.each do |right| %>
          <tr class="<%= cycle 'odd', 'even' %>">
            <td><%= right.name %></td>
            <td><%= right.controller %></td>
            <td><%= right.action %></td>
            <td>
              <%= raw make_menu(right, :except => 'show') %>
            </td>
          </tr>
        <% end %>
      <% end; reset_cycle %>
    </tbody>
  </table>

  <p> <%= link_to (t"list_param", :param => t("roles_permissions")), :controller => "roles", :action => "index" %> </p>
</fieldset>
