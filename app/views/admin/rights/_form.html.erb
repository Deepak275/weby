<%= simple_form_for [:admin, @right], html: { class: 'form-horizontal' } do |f| %>
  <%= f.show_errors %>

  <%= f.input :name, :hint => t("field_required") %>
  <%= f.input :controller, :hint => t("field_required") %>
  <%= f.input :action,  :hint => t("field_required") %>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary', disable_with: t("please_wait") %>
    <%= link_to t("back"), :back, class: "btn" %>
  </div>
<% end %>
