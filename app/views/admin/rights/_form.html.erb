<%= simple_form_for [:admin, @right], html: { class: 'form-horizontal' } do |f| %>
  <%= f.show_errors %>

  <%= f.input :name, :label => t("name"), :hint => t("field_required") %>
  <%= f.input :controller, :label => t("controller"), :hint => t("field_required") %>
  <%= f.input :action, :label => t("action"), :hint => t("field_required") %>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary' %>
    <%= link_to t("back"), :back, class: "btn btn-danger" %>
  </div>
<% end %>
