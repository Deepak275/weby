<%= simple_form_for [:admin, @setting], html: { class: 'form-horizontal' } do |f| %>
  <%= f.show_errors %>

  <%= f.input :name %>
  <%= f.input :value %>
  <%= f.input :description, as: :text, input_html: {size: '30x5'} %>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary', disable_with: t("please_wait") %>
    <%= link_to t("back"), :back, class: "btn" %>
  </div>

<% end %>
