<%= simple_form_for [:admin, @role], html: { class: 'form-horizontal' } do |f| %>
  <%= f.show_errors %>

  <%= f.input :name, :label => t("name") %>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary' %>
    <%= link_to t("back"), :back, class: "btn btn-danger" %>
  </div>
<% end %>
