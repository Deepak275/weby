<center>
  <%= form_tag edit_site_admin_path(@site, @site), :method => 'get' do %>
    <%= label_tag t("search") %>
    <%= text_field_tag :search %>
    <%= submit_tag t("submit") %>
  <% end %>
</center>
<hr>
<%= form_for @site, :builder => SemanticFormBuilder do |f| %>
  <% if @site.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@site.errors.count, "") %> <%= t"prohibited_being_saved", :count => @site.errors.count %>:</h2>
      <ul>
      <% @site.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.radio_button_group :cover_id, @repositories.map{|u| { :value => u.id, :image => u.archive.url }}, (will_paginate @repositories, :previous_label => t("will_paginate.previous"), :next_label => t("will_paginate.next")), :label => t("picture"), :help => t("picture") %>

  <%= f.text_field :name, :label => t("name"), :required => true, :help => t("field_required") %><br />
  <%= f.text_field :url, :label => "URL", :required => true, :help => t("field_required") %><br />
  <%= f.text_area :description, :label => t("description"), :rows => 8, :help => t("site_comments") %><br />

  <%= f.submit t("submit") %>
<% end %>

