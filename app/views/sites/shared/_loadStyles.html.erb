<% unless @site.own_styles.blank? %>
  <style title="my own styles" type="text/css">
    <% @site.own_styles.where(:publish => :true).order('position asc').each do |style| %>
        <%= raw style.css %>
    <% end %>
  </style>
<% end %>

<% unless @site.follow_styles.blank? %>
  <% @site.sites_styles.where(:publish => :true).each do |relstyle| %>
    <!---->
    <style title="style being followed - <%= relstyle.style.name %>"  type="text/css">
      <%= raw relstyle.style.css %>
    </style>
  <% end %>
<% end %>
