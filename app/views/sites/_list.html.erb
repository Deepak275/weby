<div id="list" class="span4 pull-right">
  
  <%= form_tag request.path, method: 'get', autocapitalize: "off", class: 'form-inline pull-right search' do %>
    <%= content_tag :div, class: 'input-append' do %>
      <%= search_field_tag :search, params[:search], class: 'input-search' %><%= submit_tag t(".search"), class: 'btn btn-info' %>
    <% end %>
  <% end %>
  
  <div class="clearfix"></div>

  <% if @sites.empty? %>
    <div class="alert">
      <%= t(".no-site-found") %>
    </div>
  <% else %>
    <div class="pull-left"><%= info_page @sites %></div>
    <div class="pull-right"><%= paginate @sites, remote: true %></div>
    <div class="clearfix"></div>
    <table class="table table-striped">
      <% @sites.each do |site| %>
        <tr>
          <td><%= site_avatar_tag site %></td>
          <td> <%= link_to site.title, site_url(subdomain: site), title: site.description %> </td>
        </tr>
      <% end %>
    </table>
    <div class="pull-left"> <%= per_page_links @sites, true %> </div>
    <div class="pull-right"> <%= paginate @sites, remote: true %> </div>
    <div class="clearfix"></div>
  <% end %>
</div>
