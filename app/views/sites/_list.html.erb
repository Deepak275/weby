<div id="list" class="span4 pull-right">
  <% if @sites.empty? %>
    <div class="alert">
      <%= t(".no-site-found") %>
    </div>
  <% else %>
    <div class="pull-left"><%= info_page @sites %></div>
    <div class="pull-right"><%= paginate @sites, remote: true %></div>
    <div class="clearfix"></div>
    <table class="table table-striped">
      <% @sites.each do |site| %>
        <tr>
          <td><%= site_avatar_tag site %></td>
          <td> <%= link_to site.title, site_url(subdomain: site), title: site.description %> </td>
        </tr>
      <% end %>
    </table>
    <div class="pull-left"> <%= per_page_links @sites, true %> </div>
    <div class="pull-right"> <%= paginate @sites, remote: true %> </div>
    <div class="clearfix"></div>
  <% end %>
</div>

<div class="span8 pull-left">
  <% if @pages.empty? %>
    <div class="alert">
      <%= t(".none_page") %>
    </div>
  <% else %>
    <div class="row" id="clipping-list">
      <div class="span8">
        <ul class="thumbnails">
          <% @pages.each do |page| %>
            <li class="span4">
              <div class="thumbnail">
                <%= weby_file_view(page.image, :thumb, 64, nil, {as: "link", url: site_page_url(page, subdomain: page.owner)}) %>
                <div class="caption">
                  <h4>
                    <%= link_to page.title.truncate(70), site_page_url(page, subdomain: page.owner) %>
                  </h4>
                  <p>
                    <%= raw sanitize(page.summary, :tags=>[]).truncate(150) %>
                  </p>
                </div>
                <span><%= page.owner.title %></span>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
</div>






