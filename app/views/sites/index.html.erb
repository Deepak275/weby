<div class="row">
  <div class="span12">
    <ul class="nav nav-pills pull-left">
      <li class="active" ><a href="#sites" data-toggle="tab"><%= t(".sites") %></a></li>
      <% if current_user && not(current_user.is_admin) && not(user_sites.empty?) %>
        <li><a href="#my-sites" data-toggle="tab"><%= t(".my-sites") %></a></li>
      <% end %>
    </ul>
    <% if check_permission(Admin::SitesController, ["new"]) %>
      <%= link_to t(".new_site"), new_admin_site_path, class: 'btn pull-right new-site' %>
    <% end %>
    <%= form_tag request.path, method: 'get', autocapitalize: "off", class: 'form-inline pull-right search' do %>
      <%= content_tag :div, class: 'input-append' do %>
      <%= search_field_tag :search, params[:search], class: 'input-search' %><%= submit_tag t("search"), class: 'btn btn-primary' %>
      <% end %>
    <% end %>
    <div class="clearfix"></div>
  </div>
</div>

<div class="content tabs">
  <div class="tab-content">
    <div class="tab-pane active" id="sites">
      <% if @sites.empty? %>
        <div class="alert">
          <%# TODO: internacionalizar %>
          Nenhum site cadastrado.
        </div>
      <% else %>
        <%= render 'list' %>
      <% end %>
    </div>
    <div class="tab-pane active" id="my-sites">
    </div>
  </div>
</div>
