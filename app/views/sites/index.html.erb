  <%= content_for :stylesheets do %>
    <%= stylesheet_link_tag 'portal' %>
  <% end %>
<fieldset>
  <legend><%= t"site.other" %></legend>

  <% if check_permission(SitesController, ["new"])  %>
    <div class="left">
      <p> <%= link_to (t"new_param.masc", :param => (t"site.one")), new_site_path, :class => 'icon icon-add' %> </p>
    </div>
  <% end %>

  <center>
    <%= form_tag "/", :method => 'get', :autocapitalize => "off" do %>
      <%= text_field_tag :search %>
      <%= submit_tag t("search") %>
    <% end %>
  </center>
  <br />

  <div id="list">
    <%= render "list" %>
  </div>
</fieldset>
