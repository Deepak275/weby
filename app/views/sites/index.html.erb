<% has_my_sites = current_user && !current_user.is_admin? && current_user.sites.any? %>
<div class="row">
  <div class="col-md-4">
    <%= form_tag root_path, method: 'get', autocapitalize: "off", class: 'search' do %>
      <%= hidden_field_tag(:groupings, params[:groupings]) if params[:groupings] %>
      <%= content_tag :div, class: 'input-group' do %>
        <%= search_field_tag :search, params[:search], class: 'form-control' %>
        <span class="input-group-btn">
          <%= submit_tag t(".search"), class: 'btn btn-info' %>
        </span>
      <% end %>
    <% end %>
  </div>
  <div class="col-md-6">
   <% if check_permission(Admin::SitesController, ["new"]) %>
      <%= link_to t(".new_site"), new_admin_site_path, class: 'btn btn-success pull-right new-site' %>
    <% end %>
    <% if has_my_sites %>
      <%= link_to t(".my-sites"), '#', class: 'btn btn-default pull-right switch', data: {switchtext: t('.sites')}  %>
    <% end %>
  </div>
  <div class="col-md-12">
    <%= link_to main_app.root_path(groupings: params[:groupings] == 'all' ? nil : 'all', search: params[:search]), class: "label #{params[:groupings] == 'all' ? 'label-info' : ''}" do %>
      <span><%= t('.all') %></span>
      <%= content_tag :span, 'X', class: 'label label-info' if params[:groupings] == 'all' %>
    <% end if @default_groupings %>
    <% @groupings.each do |grouping| %>
      <%= link_to main_app.root_path(groupings: params[:groupings] == grouping.id.to_s ? nil : grouping.id.to_s, search: params[:search]), class: "label label-default #{params[:groupings] == grouping.id.to_s ? 'label-info' : ''}" do %>
        <span><%= grouping.name %></span>
        <%= content_tag :span, 'X', class: 'label label-info' if params[:groupings] == grouping.id.to_s %>
      <% end %>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-md-12 switch-panel buffer-top">
    <%= render 'list' %>
  </div>
  <div class="col-md-12 switch-panel hide">
    <%= render 'my_list' %>
  </div>
</div>
 
