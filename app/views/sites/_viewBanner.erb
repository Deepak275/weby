<% banners = @site.banners.where(["date_begin_at <= ? and date_end_at > ?", Time.now, Time.now]).order("date_begin_at").all %>
<% unless banners.empty? %>
  <section id="banner">
  <% banners.each do |banner| %> 
    <% unless banner.repository.nil? %>
      <%= link_to image_tag("#{banner.repository.archive.url(:little)}", :width => "#{banner.width}", :height => "#{banner.height}", :alt => "#{banner.text}", :title => "#{banner.text}"), "#{banner.url}" %>
      <%= link_to "Despublicar", unpublish_site_banner_path(@site, banner) %>
    <% end %>
  <% end %>
  </section>
<% end %>
