<% banners = @site.banners.where(["publish='true' AND date_begin_at <= ? AND date_end_at > ?", Time.now, Time.now]).order("date_begin_at").all %>
<% unless banners.empty? %>
  <% banners.each do |banner| %> 
    <% unless banner.repository.nil? %>
      <figure id="banner">
        <% size = banner.size ? banner.size : "little" %>
        <%= link_to image_tag("#{banner.repository.archive.url(size)}", :width => "#{banner.width}", :height => "#{banner.height}", :alt => "#{banner.text}", :title => "#{banner.text}"), "#{banner.url}" %>
        <% if check_permission(BannersController, ["toggle_field"]) %>
          <%= link_to t("unpublish"), toggle_field_site_banner_path(@site, banner, :field => 'publish') %>
        <% end %>
      </figure>
    <% end %>
  <% end %>
<% end %>
