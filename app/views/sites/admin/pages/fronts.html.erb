<h2><%= t"covers"  %></h2>

<div class="contextual">
  <% with_permission(action: :new) do %>
    <%= link_to (t"new_param.fem", :param => (t"page.one")), new_site_admin_page_path, :class => 'icon icon-add' %>&nbsp;|
  <% end %>
  <%= link_to (t"list_param", :param=>t("page.other") ), site_admin_pages_path(@site), :class => 'icon icon-list' %>
</div>

<div id="pages">
  <div class="page_info_paginator"><%= t"views.pagination.total" %>&nbsp;<%= @pages.length %></div>
  <table id='list' class="list">
    <thead>
      <th><%= t("date_param", :param => t("register")) %></th>
      <th><%= t("title") %></th>
      <th><%= t("author") %></th>
      <th><%= t("category") %></th>
      <th><%= t("type") %></th>
      <% with_permission(action: 'toggle_field') do %>
        <th><%= link_to (t"publish"), fronts_site_admin_pages_path(@site, published: params[:published]=='true' ? 'false':'true' ) %></th>
      <% end %>
      <th></th>
    </thead>
    <tbody>
      <% @pages.each do |page| %>
        <tr id="sort_page_<%= page.id %>">
          <td><%=l page.created_at, :format => :short %></td>
          <td>
            <%= title_with_flags(page) %>
          </td>
          <td><%= page.author.first_name %></td>
          <td><%= page.category_list.join ', ' %></td>
          <td><%= t"#{page.type.downcase}.one" %></td>
          <% with_permission(action: :toggle_field) do %>
            <td align="center" class="publish"><%= publication_status(page) %></td>
          <% end %>
          <td>
            <%= make_menu(page, :except => "show") %>
            <% with_permission(action: :sort) do %>
              <span class='handle icon icon-drag'><%= t("move") %></span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= javascript_tag do %>
  window.onload=function(){
    $(document).ready(function() {
      $('#list').sortable({
        axis: 'y',
        dropOnEmpty:false,
        handle: '.handle',
        items: 'tbody > tr',
        opacity: 0.7,
        scroll: true,
        forcePlaceholderSize: true,
        update: function(ev, ui){
          id_moved = ui.item.attr('id').replace('sort_page_','');
          id_after = ui.item.next().attr('id') ? ui.item.next().attr('id').replace('sort_page_','') : 0;
          id_before = ui.item.prev().attr('id') ? ui.item.prev().attr('id').replace('sort_page_','') : 0;
          //alert(id_moved+' between '+id_before+' and '+id_after);
          $.ajax({
            type: 'post',
            data: {'id_moved':id_moved,'id_after':id_after,'id_before':id_before},
            dataType: 'script',
            complete: function(request){ ui.item.effect('highlight'); },
            error: function(){$('#list').sortable('cancel');},
            url: '<%= sort_site_admin_pages_path %>'
          });
        }
      });
    });
  }
<% end %>
<%= content_for :javascripts, javascript_include_tag("jquery-ui.min") %>
<%= content_for :stylesheets, stylesheet_link_tag("jquery.sortable") %>
