<% title ".pages" %>
<% breadcrumb params[:search].present? ? :pages_search : :pages %>
<div class="pull-left">
  <%= form_tag site_admin_pages_path, method: 'get', autocapitalize: "off", class: 'search pull-right' do %>
    <%= content_tag :div, class: 'input-append' do %>
      <%= search_field_tag :search, params[:search], class: 'input-search' %><%= submit_tag t("search"), class: 'btn btn-info' %>
    <% end %>
  <% end %>
</div>

<div class="pull-right">
  <% with_permission(action: :new) do %>
    <%= link_to t(".new_page"),
      new_site_admin_page_path,
      class: "btn btn-success" %>
  <% end %>
  <% with_permission(action: :fronts) do %>
    <%= link_to t(".covers"), fronts_site_admin_pages_path, class: "btn btn-default" %>
  <% end %>
  <% with_permission(action: [:recover, :purge]) do %>
    <%= link_to t("recycle_bin"), recycle_bin_site_admin_pages_path, class: "btn btn-default" %>
  <% end %>
</div>
<div class="clearfix"></div>

<div id="pages">
  <%= render :partial => "list" %>
</div>
