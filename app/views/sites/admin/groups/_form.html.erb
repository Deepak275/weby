<%= simple_form_for [@site, :admin, @group], html: { class: 'form-horizontal' } do |f| %>
  <%= f.show_errors %>

  <%= f.input :name, :label => t("name"), :hint => t("field_required") %>

  <%= f.input :emails, :hint => t('comma_separated_emails'), as: :text, input_html: { rows: 4 } %>

  <%= f.input :site_id, :input_html => {:value => @site.id}, :as => :hidden %>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary' %>
    <%= link_to t("back"), :back, class: "btn btn-danger" %>
  </div>

<% end %>
