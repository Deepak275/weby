<%- title "user.other" %>

<div class="span9">
  <div class="well">


    <div class="pull-left">
      <%= form_tag request.path, method: 'get', autocapitalize: "off", class: 'search pull-right' do %>
        <%= content_tag :div, class: 'input-append' do %>
          <%= search_field_tag :search, params[:search], class: 'input-search' %><%= submit_tag t("search"), class: 'btn btn-large btn-primary btn-search' %>
        <% end %>
      <% end %>
    </div>

    <% if check_permission(Sites::Admin::UsersController, 'manage_roles') %>
      <div class="pull-right">
        <%= link_to t('enrole_user_site'),
          manage_roles_site_admin_users_path(@path),
          class: "btn btn-success btn-large" %>
      </div>
      <div class="clearfix"></div>
    <% end %>

    <div id="list">
      <%= render :partial => "list" %>
    </div>
  </div>
</div>
