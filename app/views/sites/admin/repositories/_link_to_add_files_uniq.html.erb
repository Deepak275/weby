<div class="add-uniq-file <%= "without-image" unless selected %>"
  data-place-name="<%= (place_name) %>"
  data-field-name="<%= (field_name) %>"
  data-multiple="<%= (multiple) %>"
  data-file-types="<%= (file_types.to_s) %>"
  onclick='repositorySearch(this);'>
  <span> <%= link_title %> </span>

  <div id="<%= escape_javascript(place_name) %>" >
    <label>
      <figure>
        <% if selected %>
          <%= weby_file_view(selected, :mini, 64, 64, {as: 'image'}) %>
          <figcaption><%= selected.description %></figcaption>
        <% end %>
      </figure>
    </label>
    <%= hidden_field_tag field_name, selected.id, id: "repository_id_#{selected.id}" if selected %>
  </div>
</div>
