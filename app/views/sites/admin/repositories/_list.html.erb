<div class="row">
  <div class="col-md-12">
    <div class="col-md-12" style="margin-top: 10px"><%= render 'view_picker' %></div>
    <div class="col-md-5 pull-left"><%= info_page @repositories %></div>
    <div class="col-md-4 pull-right"><%= paginate @repositories, :remote => true %></div>
  </div>
</div>

<div class="col-md-12">
  <table class='table table-striped table-condensed'>
    <thead>
      <th><%= sortable 'archive_file_name', t(".archive") %></th>
      <th><%= sortable 'description', t(".description") %></th>
      <th><%= sortable 'archive_content_type', t(".type") %></th>
      <th></th>
    </thead>
    <tbody>
      <% @repositories.each do |repository| %>
        <tr class="<%= cycle 'odd', 'even' %>">
          <td> <%= weby_file_view(repository, :thumb, "64", "64", target: '_blank', title: repository.archive_file_name) %> </td>
          <td> <%= repository.description %> </td>
          <td> <%= repository.archive_content_type %> </td>
          <td> <%= raw make_menu(repository) %> </td>
        </tr>
      <% end; reset_cycle %>
    </tbody>
  </table>
</div>

<div class="row">
  <div class="col-md-5 pull-left"> <%= per_page_links @repositories, true, :xs  %> </div>
  <div class=" col-md-4 pull-right"> <%= paginate @repositories, remote: true %> </div>
</div>
