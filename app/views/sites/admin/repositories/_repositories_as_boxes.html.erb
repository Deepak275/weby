<div class="pull-left"><%= info_page @repositories %></div>
<div class="pull-right"><%= paginate @repositories, :remote => true %></div>
<div class="clearfix"></div>

<div class="clear">
  <% @repositories.each do |repository| %>
    <div class="span2">
      <div class="thumbnail">
        <%= weby_file_view(repository, :mini, "100", '100') %>
        <div class="caption">
          <%= repository.description %> <br />
          <%= raw make_menu(repository) %> 
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="pull-left"><%= per_page_links @repositories, true %></div>
<div class="pull-right"><%= paginate @repositories, :remote => true %></div>
<div class="clearfix"></div>
