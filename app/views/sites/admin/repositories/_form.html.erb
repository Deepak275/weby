<%= simple_form_for [@site, :admin, @repository], :html => { :multipart => true } do |f| %> 
  <% if @repository.errors.any? %>
    <div id="error_explanation">
      <h2> <%= pluralize(@repository.errors.count, "") %> <%= t"prohibited_being_saved", 
        :count => @repository.errors.count %>: </h2>
      <ul>
        <% @repository.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.input :description, :label => t("description"), :hint => (t("field_required") + " " + t("acessibility_needs"))%>
  <%= f.input :archive, :label => t(:archive, :count => 1), :as => :file %>
  <%= f.input :site_id, :input_html => {:value => @site.id}, :as => :hidden %>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary', disable_with: t("please_wait") %>
    <%= link_to t("back"), :back, class: "btn btn-danger" %>
  </div>
<% end %>
