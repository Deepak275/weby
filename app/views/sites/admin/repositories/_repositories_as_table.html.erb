  <%= info_page @repositories %>
  <%= paginate @repositories, :remote => true %>
  <table class='list'>
    <thead>
      <th><%= t(".archives") %></th>
      <th><%= sortable 'id' %></th>
      <th><%= sortable 'description', t(".description") %></th>
      <th></th>
    </thead>
    <tbody>    
    <% @repositories.each do |repository| %>
      <tr class="<%= cycle 'odd', 'even' %>">
        <td> <%= weby_file_view(repository, :mini, "64", "64") %> </td>
        <td> <%= repository.id %></td> 
        <td> <%= repository.description %> </td>
        <td> <%= raw make_menu(repository) %> </td>
      </tr>
    <% end; reset_cycle %>
    </tbody>
  </table>
  <%= per_page_links @repositories, true %>
  <%= paginate @repositories, :remote => true %>
