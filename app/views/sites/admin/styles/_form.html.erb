<%= simple_form_for [@site, @style] do |f| %>
  <% if @style.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@style.errors.count,"") %>
        <%= t('prohibited_being_saved', count: @style.errors.count) %>:
      </h2>
      <ul>
        <% @style.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.input :name,
    label: t("name"), 
    hint: t("field_required") %>

  <%= f.input :owner_id, 
    input_html: {value: @site.id}, 
    as: :hidden %>

  <div class="input">
    <%= f.input :css, 
      label: t("style.one"), 
      as: :text, 
      wrapper_html: { class: 'nostyle' },
      input_html: { class: 'style-editor' } %>

    <%= link_to t("help_with_style"),
      (Setting.get(:help_site) || "/help"),
      target: "_blank" %>
      
    <%= image_tag "help-icon.png" %>
  </div>

  <div class="actions">
    <%= f.submit t("save"), 
      class: 'green-button' %>
  
    <%= link_to t('back'), 
      site_admin_styles_path(@site), 
      class: 'red-button' %>
  </div>
<% end %>
