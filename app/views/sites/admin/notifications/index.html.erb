<div class="pull-left">
  <%= form_tag site_admin_notifications_path, method: 'get', autocapitalize: "off", class: 'search pull-right' do %>
    <%= content_tag :div, class: 'input-append' do %>
      <%= search_field_tag :search, params[:search], class: 'input-search' %><%= submit_tag t("search"), class: 'btn btn-info btn-search' %>
    <% end %>
  <% end %>
</div>

<div class="pull-right">
  <%= link_to t(".mark_all_notifications_as_read"), mark_as_read_site_admin_notifications_path(:text => "all"), method: :post, class: "btn btn-primary" %>
</div>

<div class="clearfix"></div>
<%= content_tag :div, render('list'), id: 'list' %>

