<% if @extensions.empty? %>
  <div class="alert">
    <%= t(".none_extension") %>
  </div>
<% end %>

<table class='table table-striped table-condensed'>
  <thead>
    <th><%= t(".name") %></th>
    <th></th>
  </thead>
  <tbody>
    <% @extensions.each do |extension| %>
      <tr>
        <td> <%= extension.name %></td>
        <td>
          <%= raw make_menu(extension) %>
          <% if check_permission(Sites::Admin::ExtensionsController, 'edit') %>
            <%= link_to t(".edit_extension"),
              "/#{extension.name}/admin",
              class: "btn btn-success pull-right" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
