<% current_site.extensions.each do |extension| %>
  <li>
    <%= extension.name %> -
    <%= link_to 'remover', [:site_admin, extension], :method => :delete, :confirm => 'confirm' %>
  </li>
<% end %>

<%= simple_form_for [:site_admin, @extension], html: { class: 'form-horizontal'} do |f| %>
  <%= f.show_errors %>

  <%= f.input :name, :collection => @extensions %>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary', disable_with: t("please_wait") %>
    <%= link_to t("back"), :back, class: "btn btn-danger" %>
  </div>
<% end %>

<%= yield :bottom %>
