<%= simple_form_for [:site_admin, @feedback], html: { class: 'form-horizontal' } do |f| %>
  <%= f.show_errors %>

  <% unless @groups.empty? %>
    <%= f.association :groups, label: "<font color='red'>*</font> #{t('.group')}",
          collection: @groups.collect{ |p| [p.name, p.id]},
          as: :check_boxes, hint: t(".group_explain") %>
  <% end %>

  <%= f.input :name  %>
  <%= f.input :email %>
  <%= f.input :subject %>
  <%= f.input :message, as: :text, input_html: { size: '60x8'} %>

  <%= f.input :site_id, :input_html => {:value => @site.id}, :as => :hidden %>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary', disable_with: t("please_wait") %>
    <%= link_to t("back"), :back, class: "btn btn-danger" %>
  </div>
<% end %>
