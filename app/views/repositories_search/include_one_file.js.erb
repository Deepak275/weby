$("#file_search_box").dialog("close").remove();

<% if @file %>
  $("#link-to-include-one-file").parent().
  append("<%=j file_selected(@file, @name, @label) %>");

  $("#link-to-include-one-file").
  find(".ui-button-text").
  html("<%=j weby_file_view(@file, :mini) %>")

  $("#link-to-include-one-file").parent().
  find('input').hide();
<% else %>
  $("#link-to-include-one-file").parent().
  find("input").remove();
<% end %>
