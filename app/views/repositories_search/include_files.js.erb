$("#file_search_box").dialog("close").remove();

$("#<%= @final_files_list %>").
html("<%= escape_javascript(render "repositories_search/files_list",
                            name: @name,
                            label: @label,
                            show_selected: true,
                            multiplicity: @multiplicity) %>");

if('<%= @same_place %>' == 'true' && <%= @files.count %> > 0 ){

  $("#link-to-include-files").hide();
  $("#<%= @final_files_list %>").find('input').hide();

  $("#<%= @final_files_list %>").unbind('click').
    live('click',function(event){
      $("#link-to-include-files").trigger('click');
      event.preventDefault();
    });
}else{
  $("#<%= @final_files_list %>").parent().find("#link-to-include-files").show();
}
