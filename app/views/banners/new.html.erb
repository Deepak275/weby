<fieldset>
  <legend><%= t"new.masc" %> <%= (t"banner.one") %></legend>
  
  <center>
    <%= form_tag request.path, :method => 'get', :remote => true do %>
      <%= label_tag t("search") %>
      <%= text_field_tag :image_search %>
      <%= submit_tag t("submit") %>
    <% end %>
  </center>
  <hr>
  
  <%= simple_form_for [@site, @banner], :html => { :multipart => true } do |f| %>
    <% if @banner.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@banner.errors.count,"") %><%= t"prohibited_being_saved", :count => @banner.errors.count %>:</h2>
        <ul>
        <% @banner.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <%= render :partial => 'form', :locals => {:f => f} %>
    <%= f.input :site_id, :input_html => {:value => @site.id}, :as => :hidden %>

    <%= f.submit t"create" %> <%= link_to t('back'), :back %>
  <% end %>
</fieldset>
