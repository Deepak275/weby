  <tbody>
  <% @rights.each do |right| %>
    <tr class="<%= cycle 'odd', 'even' %>">
      <td><%= right.name %></td>
      <td><%= right.controller %></td>
      <td><%= right.action %></td>
      <td>
        <%= make_menu(right) %>
        <%#= link_to 'Edit', edit_right_path(right) %>
