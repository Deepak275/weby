<fieldset>
  <legend><%= t"editing", :param => (t"menu", :count => 1) %></legend>

  <%= form_for [@site, @menu], :builder => SemanticFormBuilder do |f| %>
     <% if @menu.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@menu.errors.count,"") %> <%= t"prohibited_being_saved", :count => @menu.errors.count %>:</h2>
        <ul>
        <% @menu.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <%= f.text_field :title, :label => t("text"), :required => true, :help => t("field_required") %>

    <div class="text-field ">
      <label for="div_event"><%= t"type" %></label>
      <div class="input">
        <%= link_to ("Externo"), edit_site_menu_path(:type => "external"), :update => "div_link", :remote => true %> |
        <%= link_to ("Interno"), edit_site_menu_path(:type => "internal"), :update => "div_link", :remote => true %>
      </div>
    </div>
    <div id="div_link">
      <%#= render :partial => 'formPages', :locals => {:f => f} %>
    </div>

    <%= f.submit t("save") %> <%= link_to t("back"), :back %>
  <% end %> 

</fieldset>
