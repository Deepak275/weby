<h1><%= t:new %> <%= params[:type] %></h1>

<%= form_for "pagina", @pagina, :url => :paginas do |f| %>
  <% @pagina.errors.full_messages.each do |msg| %>  
    <li><%= msg %></li>  
  <% end %>  

  <%= f.hidden_field :type, :value => params[:type] %>

  <p>
    <%= f.label :dt_cadastro, t:date, :param => t("registration") %><br />
    <%= f.date_select :dt_cadastro %>
  </p>
  <p>
    <%= f.label :dt_publica, t:date, :param => t(":publication") %><br />
    <%= f.date_select :dt_publica %>
  </p>
  <p>
    <%= f.label :dt_inicio, t:date, :param => t("begin") %><br />
    <%= f.date_select :dt_inicio %>
  </p>
  <p>
    <%= f.label :dt_fim, t:data, :param => t("end") %><br />
    <%= f.date_select :dt_fim %>
  </p>
  <p>
    <%= f.label :imagem, t:picture %><br />
    <%= f.text_field :imagem %>
  </p>
  <p>
    <%= f.label :posicao, t:position %><br />
    <%= f.text_field :posicao %>
  </p>
  <p>
    <%= f.label :status %><br />
    <%= f.text_field :status %>
  </p>
  <p>
    <%= f.label :autor_id %><br />
    <%= f.text_field :autor_id %>
  </p>
  <p>
    <%= f.label :editor, t:editor %><br />
    <%= f.text_field :editor %>
  </p>
  <p>
    <%= f.label :editor_chefe %><br />
    <%= f.text_field :editor_chefe %>
  </p>
  <p>
    <%= f.label :texto, t:text %><br />
    <%= f.text_field :texto %>
  </p>
  <p>
    <%= f.label :url, t:url %><br />
    <%= f.text_field :url %>
  </p>
  <p>
    <%= f.label :site_id, t:site_id %><br />
    <%= f.text_field :site_id %>
  </p>

  <p>
    <%= f.label :time_capa, t:time_cover %><br />
    <%= f.datetime_select :time_capa %>
  </p>

  <%= render :partial => "new" + params[:type], :locals=> { :f=>f } %>

  <p> <%= f.submit %> </p>
<% end %>

<%= link_to 'Voltar', :back %>
