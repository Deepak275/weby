<fieldset>
  <legend><%= t"site.other" %></legend>

  <% if check_permission(SitesController, ["new"])  %>
    <div class="contextual">
      <%= link_to (t"new_param.masc", :param => (t"site.one")), new_site_path, :class => 'icon icon-add' %> 
    </div>
  <% end %>

  <center>
    <%= form_tag request.path, method: 'get', autocapitalize: "off" do %>
      <%= search_field_tag :search, params[:search] %>
      <%= submit_tag t("search"), class: "search-button" %>
    <% end %>
  </center>

  <div id="list">
    <%= render "list" %>
  </div>
</fieldset>
