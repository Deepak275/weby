<div class="tabbable i18n">
  <ul class="nav nav-tabs">
    <% current_site.locales.each_with_index do |locale, index| %>
      <li class="<%= index == 0 ? "active" : "" %>"><%= link_to locale_with_name(locale, '16'), "#tab_#{locale}", data: {toggle: 'tab'} %></li>
    <% end %>
  </ul>
  <div class="tab-content">
    <% current_site.locales.each_with_index do |locale, index| %>
      <div id="tab_<%= locale.name %>" class="tab-pane<%= index == 0 ? " active" : "" %>">

        <%= f.component_i18n_input locale, :body, :input_html => {class: "mceSimple", style: "width: 550px; height: 280px;"}, :as => :text%>

      </div>
    <% end %>
  </div>
</div>
<%= f.input :html_class, :input_html => {:pattern => '^[A-Za-z0-9_\-]*$'} %>
<%= target_dialog %>
<%= repository_dialog %>
<%= content_for :javascripts, javascript_include_tag("text_component_form") %>