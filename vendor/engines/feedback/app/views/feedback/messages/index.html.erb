<%- title  ".feedback" %>

<div class="span9">
  <div class="well">

    <% if @messages.empty? %>
      <div class="alert">
        <%= t(".none_feedback") %>
      </div>
    <% end %>

    <div class="pull-right">
      <% if check_permission(Feedback::GroupsController, [:new]) %>
        <%= link_to t(".new_group"),
          new_group_path,
          class: "btn btn-success btn-large" %>
      <% end %>
      <% if check_permission(Feedback::MessagesController, [:index]) %>
        <%= link_to t(".groups"),
          groups_path,
          class: "btn btn-primary btn-large" %>
      <% end %>
    </div>
    <div class="clearfix"></div>

    <% unless @messages.empty? %>
      <div class="page_info_paginator"><%= t("views.pagination.total") %>&nbsp;<%= @messages.length %></div>
      <table class='table table-striped table-condensed'>
        <thead>
          <th><%= t(".name") %></th>
          <th><%= t(".email") %></th>
          <th><%= t(".subject") %></th>
          <th></th>
        </thead>
        <tbody>
          <% @messages.each do |feedback| %>
            <tr class="<%= cycle 'odd', 'even' %>">
              <td><%= feedback.name %></td>
              <td><%= feedback.email %></td>
              <td><%= feedback.subject %></td>
              <td>
                <%= raw make_menu(feedback) %> 
              </td>
            </tr>
            <% end; reset_cycle %>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
