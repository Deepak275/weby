<h2><%= t('.new_message') %> - <%= t('.feedback') %></h2>
<br />
<%= simple_form_for [@message], html: {class: 'form-vertical'} do |f| %>
  <%= f.show_errors %>

  <% unless @groups.empty? %>
    <%= f.association :groups, label: "<font color='red'>*</font> #{t('.group')} (#{t(".group_explain")})",
          collection: @groups,
          as: :check_boxes,
          checked: params_groups %>
  <% end %>

  <%= f.input :name, input_html: { value: params['name'] }  %>
  <%= f.input :email, input_html: { value: params['email'] }%>
  <%= f.input :subject, input_html: { value: params['subject'] } %>
  <%= f.input :message, as: :text, input_html: { value: params['message'], size: '60x8'} %>
  <%= f.input :site_id, :input_html => {:value => @site.id}, :as => :hidden %>

  <div class="form-actions">
    <%= f.button :submit, t('submit'), class: 'btn-primary', disable_with: t("please_wait") %>
    <%= link_to t("back"), :back, class: "btn btn-danger" %>
  </div>
<% end %>
