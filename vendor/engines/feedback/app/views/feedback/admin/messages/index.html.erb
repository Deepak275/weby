<% title ".feedbacktitle" %>
<% breadcrumb :messages %>
<div class="pull-left">
  <%= form_tag admin_messages_path, method: 'get', autocapitalize: "off", class: 'search pull-right' do %>
    <%= content_tag :div, class: 'input-append' do %>
      <%= search_field_tag :search, params[:search], class: 'input-search' %><%= submit_tag t("search"), class: 'btn btn-info btn-search' %>
    <% end %>
  <% end %>
</div>

<div class="pull-right">
  <% if check_permission(Feedback::Admin::GroupsController, [:new]) %>
    <%= link_to t(".new_group"),
      new_admin_group_path,
      class: "btn btn-success" %>
  <% end %>
  <% if check_permission(Feedback::Admin::GroupsController, [:index]) %>
    <%= link_to t(".groups"),
      admin_groups_path,
      class: "btn" %>
  <% end %>
</div>
<div class="clearfix form-group"></div>

<div id="list">
  <%= render :partial => "list" %>
</div>
