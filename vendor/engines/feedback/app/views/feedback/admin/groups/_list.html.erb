<% if @groups.empty?  %>
  <div class="alert">
    <%=t(".none_group")%>
  </div>
<% else %>
  <div class="pull-left"> <%= info_page @groups %> </div>
  <div class="pull-right"> <%= paginate @groups, remote: true %> </div>
  <div class="clearfix"></div>


    <table class='table table-striped'>
      <thead>
        <th><%= sortable 'name', t(".name") %></th>
        <th></th>
      </thead>
      <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td><%= link_to group.name, admin_group_path(group) %></td>
          <td>
            <%= raw make_menu(group) %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <div class="pull-left"> <%= per_page_links @groups, true, :xs %> </div>
  <div class="pull-right"> <%= paginate @groups, remote: true %> </div>
  <div class="clearfix"></div>

  <div class="help-block">
    <%=t(".group_explain")%>
  </div>
<% end %>
