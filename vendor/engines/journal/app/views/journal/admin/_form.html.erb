<%= simple_form_for [:site_admin, @extension], html: {class: 'form-horizontal'} do |f| %>

  <%= f.input :author, wrapper: :checkbox, as: :boolean %>
  <%= f.input :created_at, wrapper: :checkbox, as: :boolean %>
  <%= f.input :updated_at, wrapper: :checkbox, as: :boolean %>

  <%= f.input :social_share_pos, as: :select, collection: [[t('.none'), :none], [t('.top'), :top], [t('.middle'), :middle], [t('.bottom'), :bottom]], include_blank: false %>

  <%= f.input :social_share_networks_, as: :check_boxes, collection: [:twitter, :facebook] %>

	<div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary', disable_with: t("please_wait") %>
    <%= link_to t("back"), :back, class: "btn btn-default" %>
  </div>
<% end %>
<%= target_dialog %>
<%= repository_dialog %>
