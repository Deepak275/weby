<% image = weby_file_view(@news.image, :l, '128', nil) %>
<% if not image.nil? %>
  <%= full_url_image(image, @site.url) %>
<% end %>

<header>
  <%= raw available_flags(@news) if @news.locales.many? %>
  <h1><%= @news.title %></h1>
</header>

<summary>
  <p>
    <%= "#{@news.user} #{l(@news.created_at, format: :short)}" if @site.view_desc_pages %>
  </p>
  <p>
    <%= raw full_url_image(@news.summary, @site.url) %>
  </p>
</summary>

<div class="body">
  <% text = @news.text %>
  <%= raw full_url_image(text, @site.url) %>
</div>

<% if @news.url? %>
  <p><%= t(".related_url") %>: <%= link_to @news.url, @news.url %></p>
<% end %>
<br />
<%= link_to t(".original_news"), "#{@site.url}/n/#{@news.id}" %>
<br />
<%= link_to t(".text_getout"), @url %>
<br />

