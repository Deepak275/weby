<h2>
  <%= t(".events") %>
</h2>
<% if params[:tags] %>
  <% tags = params[:tags].split(',') %>
  <% tags.each do |tag| %>
    <% newtags = tags.reject {|t| t == tag} %>
    <% newtags.any? ? params[:tags] = newtags.join(',') : params.delete(:tags) %>
    <%= link_to events_path(params), class: 'weby-label info' do %>
      <%= tag %> X
    <% end %>
  <% end %>
<% end %>
